---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Referenssit - The Good Side";
const pageDescription = "Tutustu menestystarinoihimme SaaS-yritysten kanssa. Näe miten olemme auttaneet asiakkaitamme kasvamaan ja menestymään digitaalisessa maailmassa.";
---
<BaseLayout title={pageTitle} description={pageDescription}>

    <section class="hero-section" style="padding-top: 6rem; padding-bottom: 6rem;">
        <div class="container hero-grid">
            <div class="hero-content">
                <h1 class="hero__title">Muutamme SaaS-visioita kasvuksi</h1>
                <p class="large-paragraph" style="margin-bottom: 2rem;">
                    Autamme SaaS-yrityksiä kasvamaan yhdistämällä tuotestrategian, designin ja konvertoivat laskeutumissivut toimivaksi kokonaisuudeksi.
                </p>
                <div class="hero-buttons">
                    <a href="#case-studies" class="btn btn--primary">Katso töitämme &rarr;</a>
                    <a href="/contact" class="btn">Ota yhteyttä</a>
                </div>
                <div class="hero-stats">
                    <div class="hero-stat-item">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#10b981" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="result-icon"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
                        <span>10+ Vuoden kokemus</span>
                    </div>
                    <div class="hero-stat-item">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#10b981" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="result-icon"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
                        <span>20+ SaaS-asiakasta</span>
                    </div>
                </div>
            </div>
            <div class="hero-image-placeholder" style="border-radius: 1rem; overflow: hidden;">
                <img src="/images/references/referencehero.webp" alt="SaaS Growth Hero Image" style="width: 100%; height: auto; display: block; object-fit: cover;"/>
            </div>
        </div>
    </section>

    <!-- START: New Success Stories Section -->
    <section id="case-studies" class="success-stories" style="padding: 4rem 0;">
        <div class="container">
            <div style="text-align: center; margin-bottom: 3rem;">
                <h2 class="gradient-heading-lg">Case Studyt</h2>
                <p class="large-paragraph" style="max-width: 700px; margin: 1rem auto 0 auto;">
                    Tutustu töihimme alansa johtavien yritysten kanssa, jotka ovat avullamme luoneet uniikkia arvoa ja kasvua.
                </p>
            </div>

            <div class="success-stories-grid">
                <!-- Card 1: Eemel.com -->
                <div class="story-card">
                    <div class="story-card-image">
                        <img src="/images/references/eemel.webp" alt="Eemel.com Case Study" style="width: 100%; height: 100%; object-fit: cover;"/>
                    </div>
                    <div class="story-card-content">
                        <h4>Eemel.com</h4>
                        <p class="story-card-subtitle">UI/UX-suunnittelu, Brändi-identiteetti</p>
                        <a href="#" class="story-card-link">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: middle; margin-right: 4px;"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
                            Julkaistaan pian
                        </a>
                    </div>
                </div>
                <!-- Card 2: Seppo.io -->
                 <div class="story-card">
                    <div class="story-card-image">
                         <img src="/images/references/seppo-reference.webp" alt="Seppo.io Case Study" style="width: 100%; height: 100%; object-fit: cover;"/>
                    </div>
                    <div class="story-card-content">
                        <h4>Seppo.io</h4>
                        <p class="story-card-subtitle">UI/UX-suunnittelu, Brändi-identiteetti</p>
                         <a href="#" class="story-card-link">
                             <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: middle; margin-right: 4px;"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
                             Julkaistaan pian
                        </a>
                    </div>
                </div>
                 <!-- Card 3: Gebwell -->
                 <div class="story-card">
                    <div class="story-card-image">
                         <img src="/images/references/gebwell4.webp" alt="Gebwell Case Study" style="width: 100%; height: 100%; object-fit: cover;"/>
                    </div>
                    <div class="story-card-content">
                        <h4>Gebwell SmartHub</h4>
                        <p class="story-card-subtitle">UI/UX-suunnittelu, Brändi-identiteetti</p>
                         <a href="#" class="story-card-link">
                             <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: middle; margin-right: 4px;"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
                             Julkaistaan pian
                        </a>
                    </div>
                </div>
                 <!-- Card 4: Paytrail -->
                 <div class="story-card">
                    <div class="story-card-image">
                         <img src="/images/references/paytrail.webp" alt="Paytrail Case Study" style="width: 100%; height: 100%; object-fit: cover;"/>
                    </div>
                    <div class="story-card-content">
                        <h4>Paytrail UXR</h4>
                        <p class="story-card-subtitle">UX, UI, Datavetoinen suunnittelu, Käytettävyystutkimus</p>
                         <a href="#" class="story-card-link">
                             <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: middle; margin-right: 4px;"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
                            Julkaistaan pian
                        </a>
                    </div>
                </div>
                 <!-- Card 5: Eventspot App -->
                 <div class="story-card">
                    <div class="story-card-image">
                         <img src="/images/references/eventspot.webp" alt="Eventspot App Case Study" style="width: 100%; height: 100%; object-fit: cover;"/>
                    </div>
                    <div class="story-card-content">
                        <h4>Eventspot App</h4>
                        <p class="story-card-subtitle">Prototypointi, Palvelumuotoilu, Visuaalinen suunnittelu, UX</p>
                         <a href="#" class="story-card-link">
                             <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: middle; margin-right: 4px;"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
                            Julkaistaan pian
                        </a>
                    </div>
                </div>
                 <!-- Card 6: KOLL -->
                 <div class="story-card">
                     <div class="story-card-image">
                         <img src="/images/references/koll.webp" alt="KOLL App Case Study" style="width: 100%; height: 100%; object-fit: cover;"/>
                    </div>
                    <div class="story-card-content">
                        <h4>KOLL App</h4>
                        <p class="story-card-subtitle">Prototypointi, Palvelumuotoilu, Visuaalinen suunnittelu, UX</p>
                         <a href="#" class="story-card-link">
                             <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: middle; margin-right: 4px;"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
                            Julkaistaan pian
                        </a>
                    </div>
                 </div>
            </div>
        </div>
    </section>
    <!-- END: New Success Stories Section -->

    <!-- START: New Services Section -->
    <section class="services-section" style="padding: 4rem 0; background-color: var(--section-bg, #f9fafb);">
        <div class="container">
            <div class="services-heading" style="margin-bottom: 3rem;">
                <h2 class="gradient-heading-lg">Näin autamme SaaS-yrityksiä kasvamaan</h2>
                <p class="large-paragraph" style="max-width: 700px; margin: 1rem 0 0 0;">
                    Kattavat suunnittelupalvelut räätälöitynä SaaS-yrityksille kasvun jokaiseen vaiheeseen.
                </p>
            </div>

            <div class="services-grid">
                <!-- Service Card 1: UI/UX Design -->
                <div class="service-card">
                    <div class="service-card-icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" /><circle cx="9" cy="7" r="4" /><path d="M23 21v-2a4 4 0 0 0-3-3.87" /><path d="M16 3.13a4 4 0 0 1 0 7.75" /></svg></div>
                    <h4 class="service-card-title">UI/UX-suunnittelu</h4>
                    <p class="service-card-description">Luomme intuitiivisia käyttöliittymiä ja kokemuksia, jotka saavat kilpailijanne näyttämään auttamattoman vanhanaikaisilta.</p>
                    <a href="/palvelut" class="service-card-link">Lue lisää &rarr;</a>
                </div>
                <!-- Service Card 2: Brand Identity -->
                <div class="service-card">
                    <div class="service-card-icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" /><circle cx="9" cy="7" r="4" /><path d="M23 21v-2a4 4 0 0 0-3-3.87" /><path d="M16 3.13a4 4 0 0 1 0 7.75" /></svg></div>
                    <h4 class="service-card-title">Brändi-identiteetti</h4>
                    <p class="service-card-description">Kehitämme erottuvan brändin, joka resonoi kohdeyleisösi kanssa, erottuu markkinoilta ja jää asiakkaiden mieleen.</p>
                    <a href="/palvelut" class="service-card-link">Lue lisää &rarr;</a>
                </div>
                <!-- Service Card 3: Website Design -->
                 <div class="service-card">
                    <div class="service-card-icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" /><circle cx="9" cy="7" r="4" /><path d="M23 21v-2a4 4 0 0 0-3-3.87" /><path d="M16 3.13a4 4 0 0 1 0 7.75" /></svg></div>
                    <h4 class="service-card-title">Verkkosivut ja ländärit</h4>
                    <p class="service-card-description">Rakennamma verkkosivut ja ländärit, jotka viestivät tehokkaasti arvolupauksesi ja konvertoivat.</p>
                    <a href="/palvelut" class="service-card-link">Lue lisää &rarr;</a>
                </div>
                <!-- Service Card 4: Product Design -->
                 <div class="service-card">
                    <div class="service-card-icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" /><circle cx="9" cy="7" r="4" /><path d="M23 21v-2a4 4 0 0 0-3-3.87" /><path d="M16 3.13a4 4 0 0 1 0 7.75" /></svg></div>
                    <h4 class="service-card-title">Tuotesuunnittelu</h4>
                    <p class="service-card-description">Suunnittelemme käyttäjäkeskeisiä SaaS-tuotteita, jotka ratkaisevat todellisia ongelmia ja ilahduttavat käyttäjiä.</p>
                    <a href="/palvelut" class="service-card-link">Lue lisää &rarr;</a>
                </div>
                <!-- Service Card 5: Growth Design -->
                 <div class="service-card">
                    <div class="service-card-icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" /><circle cx="9" cy="7" r="4" /><path d="M23 21v-2a4 4 0 0 0-3-3.87" /><path d="M16 3.13a4 4 0 0 1 0 7.75" /></svg></div>
                    <h4 class="service-card-title">Käyttäjäpolut ja Onboarding</h4>
                    <p class="service-card-description">Optimoimme käyttäjäpolkuja ja käyttöliittymiä konversion ja sitoutumisasteen parantamiseksi sekä käyttäjien aktivoimiseksi.</p>
                    <a href="/palvelut" class="service-card-link">Lue lisää &rarr;</a>
                </div>
                <!-- Service Card 6: Design Systems -->
                 <div class="service-card">
                    <div class="service-card-icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" /><circle cx="9" cy="7" r="4" /><path d="M23 21v-2a4 4 0 0 0-3-3.87" /><path d="M16 3.13a4 4 0 0 1 0 7.75" /></svg></div>
                    <h4 class="service-card-title">Design Systems</h4>
                    <p class="service-card-description">Luomme skaalautuvia suunnittelujärjestelmiä, jotka varmistavat johdonmukaisuuden ja nopeuttavat kehitystä.</p>
                    <a href="/palvelut" class="service-card-link">Lue lisää &rarr;</a>
                </div>
            </div>
        </div>
    </section>
    <!-- END: New Services Section -->

    <!-- Testimonials Section -->
    <section class="testimonials" style="padding: 4rem 0;">
        <div class="container">
            <div class="section__header" style="text-align: center; margin-bottom: 3rem;">
                <h2 class="section__title">Mitä asiakkaamme sanovat?</h2>
                <p class="section__subtitle" style="color: #6b7280;">Lue mitä asiakkaamme kertovat kokemuksistaan</p>
            </div>
            <div class="testimonials__grid">
                 <script is:inline src="https://widget.trustmary.com/viOfoLSyY"></script>
            </div>
        </div>
    </section>

    <!-- START: New CTA Section -->
    <section class="cta-section" style="background-color: var(--section-bg); padding: 6rem 0;">
        <div class="container">
            <div class="cta-grid">
                <div class="cta-content">
                    <h2 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 1.5rem; line-height: 1.2;">Valmis kasvamaan nopeasti?</h2>
                    <p style="font-size: 1.125rem; color: var(--light-text); margin-bottom: 2.5rem; max-width: 500px;">
                        Keskustellaan, miten suunnitteluosaamisemme voi auttaa SaaS-yritystäsi saavuttamaan kasvupotentiaalinsa.
                    </p>
                </div>
                <div class="cta-form">
                     <p style="margin-bottom: 0; font-weight: 500; color: var(--text-color); padding-left: 2.5rem; font-size: 1.125rem;">Jätä yhteystietosi, niin otamme yhteyttä.</p>
                    <!-- HubSpot Embed Code -->
                    <script src="https://js-eu1.hsforms.net/forms/embed/145360432.js" defer></script>
                    <div class="hs-form-frame" data-region="eu1" data-form-id="8bc5845c-348d-4ba7-baea-ebd46b11b0a0" data-portal-id="145360432"></div>
                    <!-- End HubSpot Embed Code -->
                </div>
            </div>
        </div>
    </section>
    <!-- END: New CTA Section -->

    <style>
        .stats-grid {
            background: var(--light-background);
            padding: 2rem;
            border-radius: 1rem;
        }
        .stat-item h3 {
            font-size: 2rem;
            margin-bottom: 0.5rem;
            color: var(--primary-color);
        }
        .stat-item p {
            font-size: 1.1rem;
            color: var(--light-text);
        }
        .case-study-item {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 3rem;
            margin-bottom: 4rem;
            align-items: center;
        }
        .case-study-image {
            width: 100%;
            height: auto;
            border-radius: 1rem;
        }
        .case-study-results {
            margin-top: 2rem;
        }
        .result-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 0.5rem;
        }
        .tag {
            display: inline-block;
            padding: 0.25rem 1rem;
            border-radius: 2rem;
            background: var(--light-background);
            color: var(--light-text);
            font-size: 0.9rem;
            margin-bottom: 1rem;
        }
        @media (max-width: 768px) {
            .case-study-item {
                grid-template-columns: 1fr;
            }
            .stats-grid {
                grid-template-columns: 1fr;
            }
        }

        /* New Hero Styles */
        .hero-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 3rem;
            align-items: center;
        }
        .hero-content h1 {
            margin-bottom: 1rem;
            font-weight: 700;
        }
        .hero-buttons {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            margin-bottom: 2rem;
            justify-content: flex-start;
        }
        .hero-buttons .btn {
            /* margin-right: 1rem; */ /* REMOVED - Conflicts with gap */
        }
        .hero-buttons .btn:last-child {
            /* margin-right: 0; */ /* REMOVED - Conflicts with gap */
            background: none;
            border: 1px solid var(--border-color);
            color: var(--text-color);
        }
        .hero-buttons .btn:last-child:hover {
             background: var(--light-background);
        }
        .hero-stats {
            display: flex;
            gap: 1.5rem;
            margin-top: 2rem;
        }
        .hero-stat-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.9rem;
            color: var(--light-text);
        }
        .hero-stat-item svg {
            flex-shrink: 0;
        }

        @media (max-width: 992px) { /* Adjust breakpoint if needed */
             .hero-grid {
                grid-template-columns: 1fr; 
                text-align: center;
            }
            .hero-content {
                order: 2;
            }
            .hero-image-placeholder {
                order: 1;
                margin-bottom: 3rem;
                min-height: 250px;
            }
             .hero-buttons {
                justify-content: center;
                display: flex;
                flex-wrap: wrap;
            }
             .hero-stats {
                 justify-content: center;
                 gap: 1rem; /* Reduced gap for mobile */
                 flex-wrap: wrap; /* Allow wrapping */
            }
            .hero-stat-item {
                text-align: left; /* Reset text-align if inherited */
                display: inline-flex; /* Treat item as inline for better centering interaction */
            }
        }

        @media (max-width: 768px) {
            .case-study-item {
                grid-template-columns: 1fr;
            }
            .hero-buttons {
                justify-content: center;
            }
        }

        /* New Success Stories Styles */
        .success-stories-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 2rem; /* Adjust gap as needed */
        }
        .story-card {
            background-color: var(--card-background, #fff); /* Use a variable or default */
            border: 1px solid var(--border-color, #e2e8f0);
            border-radius: 1rem;
            overflow: hidden;
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }
        .story-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }
        .story-card-image {
            background-color: #f8f8f8; /* Light grey placeholder */
            height: 200px; /* Adjust height as needed */
            display: flex;
            align-items: center;
            justify-content: center;
            border-bottom: 1px solid var(--border-color, #e2e8f0);
        }
        /* Optional: Style for a real image if you add one later */
        /*
        .story-card-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        */
        .story-card-content {
            padding: 1.5rem;
        }
        .story-card-content h4 {
            margin-bottom: 0.5rem;
            font-size: 1.25rem; /* Adjust font size */
            font-weight: 600; /* Semi-bold */
            color: var(--text-color);
        }
        .story-card-subtitle {
            font-size: 0.9rem;
            color: var(--light-text);
            margin-bottom: 1rem;
        }
        .story-card-link {
            font-size: 0.9rem;
            color: var(--primary-color); /* Use primary color for link */
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            font-weight: 500;
            transition: color 0.2s ease;
        }
        .story-card-link:hover {
            color: var(--primary-dark, #047857); /* Darker shade on hover */
            text-decoration: underline;
        }
        .story-card-link svg {
            transition: transform 0.2s ease;
        }
        .story-card-link:hover svg {
           /* Optional: Add hover effect to icon, e.g., transform: translateX(2px); */
        }


        @media (max-width: 992px) {
             .success-stories-grid {
                grid-template-columns: repeat(2, 1fr);
            }
            /* ... existing media queries ... */
        }

        @media (max-width: 768px) {
            .success-stories-grid {
                grid-template-columns: 1fr;
            }
             /* ... existing media queries ... */
        }

        /* New Services Section Styles */
        .services-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 2.5rem; /* Slightly larger gap for service cards */
        }
        .service-card {
            /* Optional: Add background or border if needed, or keep it clean */
            /* background-color: var(--card-background, #fff); */
            /* border: 1px solid var(--border-color, #e2e8f0); */
            /* border-radius: 0.5rem; */
            padding: 1rem 0; /* Padding top/bottom */
