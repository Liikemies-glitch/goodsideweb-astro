---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import HeroSection from '../../components/HeroSection.astro';
import TrustmaryEmbed from '../../components/TrustmaryEmbed.astro';
import CalendlyEmbed from '../../components/CalendlyEmbed.astro';
import NotForEveryone from '../../components/NotForEveryone.astro';
import LogoWall from '../../components/LogoWall.astro';
import ProblemSection from '../../components/ProblemSection.astro';
import TeamSection from '../../components/TeamSection.astro';
import ProblemSolutionSection from '../../components/ProblemSolutionSection.astro';
import PricingSection from '../../components/PricingSection.astro';
import FAQSection from '../../components/FAQSection.astro';
import BlogPreviewSection from '../../components/BlogPreviewSection.astro';

const pageTitle = "The Good Side | SaaS-tuotetiimien strategiakumppani";
const pageDescription = "The Good Side - Autamme tuotetiimejä rakentamaan menestyvää SaaS-liiketoimintaa yhdistämällä tuotestrategian ja designin.";

// Fetch latest 6 blog posts
const latestPosts = (await getCollection('blog'))
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
    .slice(0, 6);

// Helper function to format dates
function formatDate(date: Date): string {
  return new Date(date).toLocaleDateString('fi-FI', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---
<BaseLayout title={pageTitle} description={pageDescription}>
    <!-- Use HeroSection component -->
    <HeroSection
        title="Jos DIY-menetelmä skaalautuisi, olisit jo markkinajohtaja."
        paragraph="Autamme tuotetiimejä rakentamaan menestyvää SaaS-liiketoimintaa yhdistämällä tuotestrategian ja designin. Tämän todistavat yli kymmenen menestyvää asiakastamme."
        primaryButtonText="Sovi tapaaminen &rarr;"
        primaryButtonHref="/fi/contact"
        secondaryButtonText="Näytä referenssit"
        secondaryButtonHref="/fi/references"
        textOnly={true}
        paddingTop="6rem"
        paddingBottom="3rem"
        textAlign="center"
    />

    <!-- Logo Wall Section -->
    <LogoWall title="Menetelmiimme luottavat kasvuhakuiset tuotetiimit" />

    <!-- Problem Section -->
    <ProblemSection 
        tag="Kuulostaako tutulta?"
        title="Tyypilliset ongelmat"
        problems={[
            {
                title: "Tuotesuunnittelu",
                description: "Tuotteen käyttöliittymä ja käyttökokemus tehdään ilman ammattimaista suunnittelua, jonka seurauksena lopputulos ei ole optimaalinen eikä tue kasvustrategiaa."
            },
            {
                title: "Käyttäjäpolut",
                description: "Käytät käyttäjäpolkujen ja sisältöjen suunnitteluun kumppaneita, jotka kukin toimivat omissa siiloissaan, mikä johtaa vaihtelevaan laatutasoon ja heikkoon konversioon."
            },
            {
                title: "Tuotepositiointi",
                description: "Tuote- ja markkinapositiointi tehdään ilman kunnon työkaluja, jonka seurauksena kohderyhmä on epäselvä, viesti ei resonoi ja tuotekehitystä on vaikea priorisoida."
            }
        ]}
    />

    <!-- Team Section -->
    <TeamSection
        title="Tuotetiimisi uudet jäsenet"
        subtitle="Palkkaa meidät poistamaan kasvun esteet"
    />

    <!-- Solution Intro Section -->
    <section class="solutions">
        <div class="container">
            <h2 class="section__title">Autamme sinua kasvamaan SaaS-liiketoiminnalla yhdistämällä nämä kolme kriittistä osa-aluetta</h2>
            <div class="solutions__grid">
                <article class="solution-card">
                    <div class="solution-card__image">
                        <img src="/images/value-props/positiointi.webp" alt="Tuotepositiointi">
                    </div>
                    <div class="solution-card__content">
                        <div class="solution-card__tags">
                            <span>Tuotepositiointi</span>
                            <span>Tuotestrategia</span>
                        </div>
                        <h3>Määrittele ketä haluat palvella ja miten aiot erottautua</h3>
                        <p>Autamme sinua ymmärtämään positiointivaihtoehtosi ja kartoittamaan kohderyhmäsi ainutlaatuiset tilanteet, jotta voit valita kohderyhmän, joka soveltuu liiketoimintasi skaalaamiseen.</p>
                    </div>
                </article>
                <article class="solution-card">
                    <div class="solution-card__image">
                        <img src="/images/value-props/userjourney.webp" alt="Käyttäjäpolut">
                    </div>
                    <div class="solution-card__content">
                        <div class="solution-card__tags">
                            <span>Ostopolut</span>
                            <span>Markkinointi</span>
                            <span>Onboardaus</span>
                        </div>
                        <h3>Luo käyttäjäpolkuja, jotka konvertoituvat liikevaihdoksi</h3>
                        <p>Autamme sinua suunnittelemaan ja optimoimaan webin ja sovelluksen läpi leikkaavia käyttäjäpolkuja, jotta käyttäjä voivat kokea palvelusi ydinarvon ja sitoutua maksaviksi asiakkaiksi.</p>
                    </div>
                </article>
                <article class="solution-card">
                    <div class="solution-card__image">
                        <img src="/images/value-props/ui.webp" alt="Käyttöliittymä ja käyttökokemus" style="transform: scale(1.3);">
                    </div>
                    <div class="solution-card__content">
                        <div class="solution-card__tags">
                            <span>Käyttökokemus (UX)</span>
                            <span>Käyttöliittymä (UI)</span>
                            <span>Tuote</span>
                        </div>
                        <h3>Luo niin hyvä tuote, että asiakkaat valitsevat sen ilman vertailua</h3>
                        <p>Autamme sinua tunnistamaan tärkeimmät käyttötapaukset, joiden pohjalta luodaan toiminnallisuuksia, jotka tekevät tuotteesi myynnistä naurettavan helppoa ja saavat kilpailijasi näyttämään auttamattoman vanhanaikaisilta.</p>
                    </div>
                </article>
            </div>
        </div>
    </section>

    <!-- Testimonials Section -->
    <section class="testimonials">
        <div class="container">
            <div class="testimonials__grid">
                 <div class="trustmary-widget">
                    <TrustmaryEmbed 
                        title="Mitä asiakkaamme sanovat?"
                        subtitle="Lue mitä asiakkaamme kertovat kokemuksistaan"
                    />
                </div>
            </div>
        </div>
    </section>

    <!-- Not For Everyone Section -->
    <NotForEveryone 
        title="Emme ole kaikille"
        subtitle="Emme ehkä ole oikea vaihtoehto jos..."
        leftColumnItems={[
            "Sinulla on aikaa opetella tekemään kaikki itse, etkä tarvitse kumppaneita",
            "Olet valinnut jo kumppaniyritykset sekä resurssit ja kaikki vaan toimii täydellisesti",
            "Sinulla on käytössä paremmat menetelmät, kehykset ja enemmän osaamista kuin meillä"
        ]}
        rightColumnItems={[
            "Budjettisi on alle 5000€",
            "Haluat, että me myös koodaamme suunnitelmamme"
        ]}
    />

    <!-- Problem/Solution Section (Using existing styles) -->
    <ProblemSolutionSection
        title="Ongelmat ja ratkaisut"
        subtitle="Yleisimmät haasteet ja miten autamme niissä."
        items={[
            {
                problemTitle: "Epäselvä arvolupaus ja erottautumisen puute",
                problemDescription: "Heikko tuotepositiointi aiheuttaa epäselvän arvolupauksen, joka nostaa asiakashankinnan kuluja, pitkittää myyntisyklejä ja tekee kehitystiimin priorisoinnista hankalaa, mikä näkyy resurssien käytön tehottomuutena ja heikkona kasvuna.",
                solutionDescription: "Tehdään positiointiharjoitus, joka auttaa sinua hahmottamaan eri positiointivaihtoehdot, jotta voit valita omalle go-to-market \"lihaksellesi\" sopivan kohderyhmän, ja luoda strategian, joka skaalautuu tuotekehityksen, markkinoinnin ja myynnin avulla."
            },
            {
                problemTitle: "Heikosti konvertoiva käyttäjäpolku",
                problemDescription: "Heikosti toteutetut käyttäjä- ja konversiopolut näkyvät laskevana konversiona ja korkeana välittömänä poistumana. Tästä aiheutuu negatiivista word-of-mouthia ja vaikeuksia löytää oikeita ongelmakohtia data-analytiikan avulla.",
                solutionDescription: "Kartoitetaan käyttäjäpolut, asennetaan data-analytiikkaa varten työkalut, tunnistetaan ja korjataan keskeiset ongelmakohdat, ja parannetaan polkuja siten, että käyttäjät voivat kokea palvelun ydinhyödyt vaivattomasti."
            },
            {
                problemTitle: "Myyntidemot tuottavat heikosti kauppaa",
                problemDescription: "Heikosti toteutettu SaaS-tuotteen käyttöliittymä ja kokemus näkyvät kasvavana asiakaspoistumana, lisääntyneinä aspatikeitteinä, kriittisinä verkkoarvosteluina ja keskin kertaisina myyntituloksina.",
                solutionDescription: "Autamme konseptoimaan ja suunnittelemaan tuotteen siten, että se saa kilpailijanne näyttämään auttamattoman vanhanaikaiselta ja joka tarjoaa käyttäjälleen kokemuksen joka saa heidät maksamaan palvelustanne aiempaa korkeampaa hintaa."
            }
        ]}
    />

    <!-- Pricing Section -->
    <PricingSection
        title="Valmiina skaalaamaan?"
        subtitle="Tutustu hinnoitteluvaihtoehtoihimme."
        sectionId="hinnat"
        anchorId="hinnat-ankkuri"
        pricingOptions={[
            {
                title: "Strateginen design-kumppani",
                price: "110€/tunti",
                description: "Asiantuntevaa SaaS-tuotteiden suunnittelua, joka auttaa tekemään tuotteestasi markkinajohtajan.",
                buttonText: "Aloita kasvumatkasi &rarr;",
                buttonHref: "/fi/contact"
            },
            {
                title: "Strateginen kasvutiimi",
                price: "Kysy tarjous",
                description: "Sitoutunut tiimi SaaS-kasvun asiantuntijoita menestyksesi vauhdittamiseksi.",
                buttonText: "Pyydä räätälöity suunnitelma &rarr;",
                buttonHref: "/fi/contact"
            }
        ]}
        note="*Alle viiden miljoonan euron liikevaihdon yrityksille tarjoamme palveluitamme alennettuun hintaan 95€/tunti. Hinnat ovat verottomia (alv 0%)."
    />

    <!-- Schedule Meeting Section -->
    <section class="schedule-meeting" id="schedule-meeting">
        <div class="container">
            <div class="section__header" style="text-align: center; margin-bottom: var(--spacing-lg);">
                <h2 class="section__title" style="color: #9C2043; font-weight: bold;">Varaa tapaaminen</h2>
                <p class="section__subtitle">Varaa aika ja katsotaan miten voimme auttaa tiimiäsi menestymään</p>
            </div>
            <div class="schedule-meeting__embed">
                <CalendlyEmbed elementId="cal-inline-index" calLink="aaltoyleva/kartoitustapaaminen" />
            </div>
        </div>
    </section>

    <!-- FAQ Section (Using the new Component) -->
    <FAQSection 
        faqs={[
            {
                question: "Kuinka pitkäksi aikaa minun tarvitsee sitoutua?",
                answer: "Sopimuksemme ovat toistaiseksi voimassaolevia, joten minimisitoutuminen on yksi kuukausi. Tämä mahdollistaa joustavan yhteistyön ja antaa sinulle vapauden skaalata palveluitamme tarpeidesi mukaan. Tyypillisesti asiakkaamme työskentelevät kanssamme 2-6 kuukautta projektin laajuudesta riippuen."
            },
            {
                question: "Miten erotatte itsenne muista design-toimistoista?",
                answer: "Olemme erikoistuneet nimenomaan SaaS-tuotteiden suunnitteluun ja ymmärrämme syvällisesti alan erityispiirteet. Yhdistämme tuotestrategian, käyttöliittymäsuunnittelun ja markkinoinnin yhdeksi kokonaisuudeksi. Meillä on vahva kokemus konversion optimoinnista ja käyttäjäpolkujen suunnittelusta erityisesti SaaS-kontekstissa."
            },
            {
                question: "Mitä työkaluja käytätte suunnittelussa?",
                answer: "Käytämme moderneja suunnittelutyökaluja kuten Figmaa UI/UX-suunnitteluun, Miroa käyttäjäpolkujen ja workshoppien fasilitointiin sekä Hotjaria käyttäjäanalytiikassa. Lisäksi hyödynnämme AI-pohjaisia työkaluja käyttäjätutkimuksessa ja data-analytiikassa varmistaaksemme dataohjatun suunnitteluprosessin."
            },
            {
                question: "Miten varmistatte, että design tukee liiketoimintatavoitteitamme?",
                answer: "Aloitamme aina kartoittamalla liiketoimintatavoitteenne ja mittarit. Teemme perusteellisen positiointiharjoituksen, joka auttaa ymmärtämään kohderyhmänne ja kilpailuetunne. Suunnitteluprosessimme perustuu jatkuvaan mittaamiseen ja optimointiin, jotta voimme varmistaa designin vaikuttavuuden konversioon ja kasvuun."
            },
            {
                question: "Voitteko auttaa olemassa olevan tuotteen kehittämisessä?",
                answer: "Kyllä, autamme sekä uusien tuotteiden suunnittelussa että olemassa olevien tuotteiden kehittämisessä. Teemme ensin perusteellisen analyysin nykyisestä tuotteestanne, keräämme käyttäjädataa ja tunnistamme kehityskohteet. Tämän pohjalta luomme kehityssuunnitelman, joka voidaan toteuttaa vaiheittain häiritsemättä nykyistä liiketoimintaa."
            },
            {
                question: "Miten käsittelette monimutkaisia SaaS-tuotteita?",
                answer: "Meillä on vahva kokemus monimutkaisten B2B SaaS-tuotteiden suunnittelusta. Käytämme hyväksi havaittuja menetelmiä ja kehyksiä, joiden avulla kompleksikin kokonaisuus kääntyy selkeäksi käyttöliittymäksi. Ulkopuolinen näkökulmamme auttaa usein näkemään yksinkertaistamisen mahdollisuudet, joita sisäinen tiimi ei välttämättä huomaa."
            },
            {
                question: "Miten varmistatte suunnittelijan saatavuuden projektiimme?",
                answer: "Emme ylimyy resurssejamme, vaan varmistamme aina, että suunnittelijoillamme on riittävästi aikaa paneutua projektiinne. Tyypillisesti yksi suunnittelija työskentelee 2-3 projektin parissa samanaikaisesti, mikä mahdollistaa sekä tehokkaan työskentelyn että riittävän joustavuuden kiireellisissä tilanteissa."
            },
            {
                question: "Mitä jos en ole tyytyväinen lopputulokseen?",
                answer: "Työllämme on täysi tyytyväisyystakuu. Jos et ole tyytyväinen työhömme, et maksa mitään. Työskentelemme iteratiivisesti ja keräämme palautetta säännöllisesti varmistaaksemme, että olemme oikealla polulla. Tämä lähestymistapa minimoi riskin, että lopputulos ei vastaisi odotuksiasi."
            },
            {
                question: "Miten tuette kehitystiimiä implementoinnissa?",
                answer: "Toimitamme aina tarkat tekniset spesifikaatiot ja tyyliohjeet kehitystiimille. Käytämme Figman kehittäjänäkymää ja luomme tarvittaessa komponenttikirjaston. Olemme myös käytettävissä konsultointiin implementoinnin aikana ja autamme ratkaisemaan mahdolliset tekniset haasteet designin toteutuksessa."
            },
            {
                question: "Miten hinnoittelette isommat projektit?",
                answer: "Isommissa projekteissa voimme sopia kiinteän kuukausibudjetin tai projektikohtaisen hinnoittelun. Tuntihintamme on 110€/tunti (pienemmille yrityksille 95€/tunti), mutta räätälöimme aina hinnoittelun projektin laajuuden ja tarpeiden mukaan. Teemme selkeän projektisuunnitelman, jossa määrittelemme tarvittavat resurssit ja aikataulun."
            }
        ]}
    />

    <!-- Blog Preview Section -->
    <BlogPreviewSection 
        title="Tuoreimmat ajatuksemme" 
        allPostsLink="/fi/blog" 
        showAllPostsButtonText="Lue kaikki kirjoitukset →"
    />

</BaseLayout>

<style>
    /* CSS styles for this page - removed team-grid styles as they're now in the TeamSection component */
</style>
