---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import HeroSection from '../../components/HeroSection.astro';
import TrustmaryEmbed from '../../components/TrustmaryEmbed.astro';
import CalendlyEmbed from '../../components/CalendlyEmbed.astro';

const pageTitle = "Tuotepositiointi SaaS-tuotteelle | The Good Side";
const pageDescription = "Laadukkaalla tuotepositioinnilla varmistat SaaS-tuotteesi kilpailuedun markkinoilla. Autamme määrittelemään kohderyhmän ja arvolupauksen, joka erottaa sinut kilpailijoista.";

// Fetch latest 6 blog posts
const latestPosts = (await getCollection('blog'))
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
    .slice(0, 6);

// Helper function to format dates
function formatDate(date: Date): string {
  return new Date(date).toLocaleDateString('fi-FI', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---
<BaseLayout title={pageTitle} description={pageDescription}>
