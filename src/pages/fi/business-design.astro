---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import HeroSection from '../../components/HeroSection.astro';
import TrustmaryEmbed from '../../components/TrustmaryEmbed.astro';
import CalendlyEmbed from '../../components/CalendlyEmbed.astro';
import NotForEveryone from '../../components/NotForEveryone.astro';
import LogoWall from '../../components/LogoWall.astro';
import TeamSection from '../../components/TeamSection.astro';
import ProblemSolutionSection from '../../components/ProblemSolutionSection.astro';
import PricingSection from '../../components/PricingSection.astro';

const pageTitle = "Business Design SaaS-yrityksille | The Good Side";
const pageDescription = "Tehokkaalla Business Designilla varmistat SaaS-tuotteesi liiketoiminnallisen kannattavuuden. Autamme luomaan kilpailukykyisiä ja käyttäjäkeskeisiä liiketoimintamalleja.";
---
<BaseLayout title={pageTitle} description={pageDescription}>
    <!-- Use HeroSection component -->
    <HeroSection
        title="Business design, joka tuo tulosta."
        paragraph="Autamme sinua suunnittelemaan liiketoimintasi, joka yhdistää käyttäjätarpeet ja kannattavan kasvun. Näin rakennat tuotteita, jotka menestyvät markkinoilla."
        primaryButtonText="Sovi tapaaminen &rarr;"
        primaryButtonHref="/fi/contact"
        secondaryButtonText="Näytä referenssit"
        secondaryButtonHref="/fi/references"
        textOnly={true}
        paddingTop="6rem"
        paddingBottom="3rem"
        textAlign="center"
    />

    <!-- Logo Wall Section -->
    <section class="logo-wall">
        <div class="container">
            <h2 class="logo-wall__title">Business design osana menestystarinaa</h2>
            <div class="logo-wall__grid">
                <!-- The logos are intentionally duplicated below -->
                <!-- First set -->
                <div class="logo-item">
                    <img src="/images/logos/eemel.png" alt="Eemel logo">
