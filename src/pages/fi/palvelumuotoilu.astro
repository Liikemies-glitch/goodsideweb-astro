---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import HeroSection from '../../components/HeroSection.astro';
import TrustmaryEmbed from '../../components/TrustmaryEmbed.astro';
import CalendlyEmbed from '../../components/CalendlyEmbed.astro';
import NotForEveryone from '../../components/NotForEveryone.astro';
import LogoWall from '../../components/LogoWall.astro';
import TeamSection from '../../components/TeamSection.astro';
import ProblemSolutionSection from '../../components/ProblemSolutionSection.astro';
import PricingSection from '../../components/PricingSection.astro';

const pageTitle = "Palvelumuotoilu SaaS-yrityksille | The Good Side";
const pageDescription = "Ammattitaitoinen palvelumuotoilu auttaa SaaS-yritystäsi kehittämään asiakaslähtöisiä palveluita ja prosesseja. Varmista kilpailukykyinen tuote ilman kokoaikaisen asiantuntijan kustannuksia.";
---
<BaseLayout title={pageTitle} description={pageDescription}>
    <!-- Use HeroSection component -->
    <HeroSection
        title="Ammattitaitoista palvelumuotoilua ilman palkkausta."
        paragraph="Tarvitsetko palvelumuotoilun osaamista, mutta et halua palkata kokoaikaista asiantuntijaa? Autamme SaaS-yritystäsi luomaan asiakaslähtöisiä palveluita, jotka parantavat käyttäjäkokemusta ja vähentävät churnia."
        primaryButtonText="Sovi tapaaminen &rarr;"
        primaryButtonHref="/fi/contact"
        secondaryButtonText="Näytä referenssit"
        secondaryButtonHref="/fi/references"
        textOnly={true}
        paddingTop="6rem"
        paddingBottom="3rem"
        textAlign="center"
    />

    <!-- Logo Wall Section -->
    <section class="logo-wall">
        <div class="container">
            <h2 class="logo-wall__title">Palvelumuotoilun avulla menestyjät</h2>
            <div class="logo-wall__grid">
