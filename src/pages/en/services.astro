            const context = this;
            const later = () => {
                timeout = null;
                if (!immediate) func.apply(context, args);
            };
            const callNow = immediate && !timeout;
            clearTimeout(timeout as number | undefined);
            timeout = window.setTimeout(later, wait);
            if (callNow) func.apply(context, args);
        };
