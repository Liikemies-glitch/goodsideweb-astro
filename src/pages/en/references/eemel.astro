import ResultsSection from '../../../components/ResultsSection.astro';
import ComparisonSliderSection from '../../../components/ComparisonSliderSection.astro';
import TestimonialSection from '../../../components/TestimonialSection.astro';
import CTASection from '../../../components/CTASection.astro';
import FullStorySection from '../../../components/FullStorySection.astro';
import SuccessStoriesSection from '../../../components/SuccessStoriesSection.astro';

const pageTitle = "Eemel.com\'s redesign enabled growth in global markets";
const description = "Eemel.com renewed its user interface and user experience, resulting in a 622% increase in media budget ROI.";

// Results data for the new component
const resultsData = {
  title: "Achieved Results",
  subtitle: "The most significant results of the modernized user interface and user-centric design:",
  metricCards: [
    {
      value: "+55%",
      title: "Weekly Revenue ARR",
      description: "Weekly recurring revenue (ARR) increased from €560/week → €870/week" 
    },
    {
      value: "+622%",
      title: "Media Budget ROI",
      description: "Return on one euro of marketing budget increased from €0.80 → €5.78"
    },
    {
      value: "+46%",
      title: "Average Deal MRR",
      description: "Average MRR per customer deal increased from €63 → €92"
    },
    {
      value: "+25%",
