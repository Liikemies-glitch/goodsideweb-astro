        font-weight: 500;
        text-decoration: none;
        display: inline-block;
        transition: all 0.2s ease;
    }
    
    .btn--primary:hover {
        transform: scale(1.05);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }
    
    /* Responsive Styles */
    @media (max-width: 992px) {
        .benefits-grid {
            grid-template-columns: repeat(1, 1fr);
        }
        
        .role-card,
        .role-card--reversed {
            grid-template-columns: 1fr;
        }
        
        .role-card--reversed .role-info,
        .role-card--reversed .role-visual {
            order: 0;
        }
        
        .role-info {
            padding: 2rem;
        }
    }

    /* Ensure the tag in designer-roles section header is block-level to push heading below it */
    .designer-roles .section__header .section__tag {
      display: block;
      width: -moz-fit-content; /* Firefox fallback */
      width: fit-content;
    }

    /* Adjust margin below the main heading in designer-roles section for consistency */
    .designer-roles .section__header .gradient-heading-lg {
      margin-bottom: var(--spacing-lg); /* Match CaseStudySection title spacing */
    }

    /* Adjust margin below the main heading in introduction section for consistency */
    .introduction .section__header .gradient-heading-lg {
      margin-bottom: var(--spacing-lg); /* Match CaseStudySection title spacing */
    }
