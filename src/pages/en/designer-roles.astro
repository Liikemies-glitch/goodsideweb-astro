        margin-bottom: 1rem;
        font-weight: 600;
    }
    
    .benefit-card p {
        color: #666;
        line-height: 1.6;
    }
    
    /* Call to Action Section */
    .cta-section {
        padding: 5rem 0;
        background: linear-gradient(120deg, var(--primary-color), var(--secondary-color));
        color: white;
