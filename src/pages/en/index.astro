    <!-- Testimonials Section -->
    <section class="testimonials">
        <div class="container">
            <div class="testimonials__grid">
                 <div class="trustmary-widget">
                    <TrustmaryEmbed 
                        title="What our clients say"
                        subtitle="Read what our clients say about their experiences"
                    />
                </div>
            </div>
        </div>
    </section>

    <!-- Not For Everyone Section -->
    <section class="not-for-everyone">
        <div class="container">
            <div class="section__header">
                <h2 class="section__title">We're not for everyone</h2>
                <p class="section__subtitle">We may not be the right option if...</p>
