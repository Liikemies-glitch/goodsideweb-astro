---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import HeroSection from '../../components/HeroSection.astro';
import TrustmaryEmbed from '../../components/TrustmaryEmbed.astro';
import CalendlyEmbed from '../../components/CalendlyEmbed.astro';

const pageTitle = "SaaS Product Positioning | The Good Side";
const pageDescription = "Position your SaaS product for market leadership. Strategic positioning and messaging that differentiates your solution and drives growth.";

// Fetch latest 6 blog posts about product positioning
const latestPosts = (await getCollection('blog', ({ id, data }) => {
    return id.endsWith('.en.md') && data.tags && (data.tags.includes('Product Positioning') || data.tags.includes('SaaS'));
}))
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
    .slice(0, 6);

// Helper function to format dates
function formatDate(date: Date): string {
  return new Date(date).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
