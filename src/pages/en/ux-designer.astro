        paragraph="Our UX design experts create intuitive, engaging experiences that delight users and drive business growth. With over 10 years of experience helping SaaS companies succeed."
        primaryButtonText="Book a UX consultation &rarr;"
        primaryButtonHref="/en/contact"
        secondaryButtonText="View UX case studies"
        secondaryButtonHref="/en/references"
        textOnly={true}
        paddingTop="6rem"
        paddingBottom="3rem"
        textAlign="center"
    />

    <!-- Logo Wall Section -->
    <section class="logo-wall">
