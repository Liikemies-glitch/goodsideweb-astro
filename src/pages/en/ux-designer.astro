---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import HeroSection from '../../components/HeroSection.astro';
import TrustmaryEmbed from '../../components/TrustmaryEmbed.astro';
import CalendlyEmbed from '../../components/CalendlyEmbed.astro';
import NotForEveryone from '../../components/NotForEveryone.astro';
import LogoWall from '../../components/LogoWall.astro';
import ProblemSection from '../../components/ProblemSection.astro';
import TeamSection from '../../components/TeamSection.astro';
import ProblemSolutionSection from '../../components/ProblemSolutionSection.astro';
import PricingSection from '../../components/PricingSection.astro';
import FAQSection from '../../components/FAQSection.astro';

const pageTitle = "Expert UX Designer Services | The Good Side";
const pageDescription = "Elevate your SaaS product with our experienced UX designers. We solve user experience challenges and create interfaces your customers will love.";

// Fetch latest 6 blog posts
const latestPosts = (await getCollection('blog', ({ id }) => {
    return id.endsWith('.en.md');
}))
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
    .slice(0, 6);

// Helper function to format dates
function formatDate(date: Date): string {
  return new Date(date).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---
