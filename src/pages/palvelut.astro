---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Palvelut - The Good Side";
const pageDescription = "Kiihdytä SaaS-liiketoimintasi kasvua The Good Side:n palveluilla. Keskitymme ratkaisemaan yleisimmät kasvun esteet SaaS-polullasi.";
---
<BaseLayout title={pageTitle} description={pageDescription}>
    <!-- Hero Section for Palvelut (using contact styles) -->
    <section class="contact-hero" style="padding-top: 4rem; padding-bottom: 2rem; background-color: var(--color-bg-secondary); min-height: auto !important;">
        <div class="container">
            <div class="contact-content">
                <h1>Kiihdytä SaaS-liiketoimintasi kasvua avullamme</h1>
                <p class="contact-description">Autamme tuotetiimejä rakentamaan menestyvää SaaS-liiketoimintaa yhdistämällä tuotestrategian, designin ja markkinoinnin toimivaksi kokonaisuudeksi.</p>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section class="services" style="padding-top: 0; padding-bottom: 4rem;">
        <div class="container" style="padding-left: 0; padding-right: 0;">
            <!-- Added back the subtitle using index page style -->
            <h2 class="logo-wall__title" style="text-align: left; margin-bottom: var(--spacing-xl); padding-left: 0; padding-right: 0;">Keskitymme ratkaisemaan yleisimmät kasvun esteet SaaS-polullasi.</h2>

            <!-- Service Details / Tabs Placeholder -->
            <div class="service-details">
                <!-- Tab Navigation -->
                <div class="service-tabs">
                    <button class="tab-button active" data-tab="tuotepositiointi">Tehokas tuotepositiointi</button>
                    <button class="tab-button" data-tab="kayttajapolut">Optimoidut käyttäjäpolut</button>
                    <button class="tab-button" data-tab="kayttoliittyma">Käyttöliittymät ja käyttäjäkokemus</button>
                </div>

                <!-- Tab Content Area -->
                <div class="service-content">
                    <!-- Content for Tuotepositiointi -->
                    <div id="tuotepositiointi" class="tab-pane active">
                        <h3 class="tab-title">Tehokas tuotepositiointi</h3>
                        <div class="content-grid">
                            <div class="content-block">
                                <h4>Ongelma:</h4>
                                <p>Kasvustrategian toteutus ontuu resurssipulan tai epäselvän suunnan vuoksi. Tuote ei erotu kilpailijoista.</p>
                            </div>
                            <div class="content-block">
                                <h4>Ratkaisu:</h4>
                                <p>Kirkastamme ydinviestimme ja kohderyhmänne. Yhdistämme tuotestrategian, designin ja markkinoinnin tukemaan positiointia.</p>
                            </div>
                            <div class="content-block">
                                <h4>Hyödyt:</h4>
                                <p>Selkeämpi markkina-asema, tehokkaampi myynti ja markkinointi, parempi asiakasymmärrys.</p>
                            </div>
                            <div class="content-block">
                                <h4>Mittari:</h4>
                                <p>Markkinaosuuden kasvu, konversioasteet, asiakaspalaute.</p>
                            </div>
                        </div>
                    </div>

                    <!-- Content for Käyttäjäpolut -->
                     <div id="kayttajapolut" class="tab-pane">
                        <h3 class="tab-title">Optimoidut käyttäjäpolut</h3>
                         <div class="content-grid">
                            <div class="content-block">
                                <h4>Ongelma:</h4>
                                <p>Asiakkaat eksyvät tai turhautuvat monimutkaisiin prosesseihin. Konversioprosentit jäävät alhaisiksi kriittisissä vaiheissa.</p>
                            </div>
                            <div class="content-block">
                                <h4>Ratkaisu:</h4>
                                <p>Analysoimme ja visualisoimme nykyiset käyttäjäpolut. Suunnittelemme ja testaamme intuitiivisempia ja tehokkaampia polkuja.</p>
                            </div>
                            <div class="content-block">
                                <h4>Hyödyt:</h4>
                                <p>Parempi käyttäjäkokemus, korkeammat konversiot, vähentynyt asiakaspoistuma.</p>
                            </div>
                            <div class="content-block">
                                <h4>Mittari:</h4>
                                <p>Tehtävien onnistumisprosentti, käytetty aika, konversioasteet poluittain.</p>
                            </div>
                        </div>
                    </div>

                    <!-- Content for Käyttöliittymät -->
                    <div id="kayttoliittyma" class="tab-pane">
                       <h3 class="tab-title">Käyttöliittymät ja käyttäjäkokemus</h3>
                         <div class="content-grid">
                            <div class="content-block">
                                <h4>Ongelma:</h4>
                                <p>Käyttöliittymä on vanhentunut, sekava tai ei vastaa käyttäjien tarpeita. Huono käytettävyys heikentää asiakastyytyväisyyttä.</p>
                            </div>
                            <div class="content-block">
                                <h4>Ratkaisu:</h4>
                                <p>Modernisoimme käyttöliittymän designin ja parannamme käytettävyyttä käyttäjätutkimuksen ja parhaiden käytäntöjen pohjalta.</p>
                            </div>
                            <div class="content-block">
                                <h4>Hyödyt:</h4>
                                <p>Parantunut käytettävyys ja estetiikka, lisääntynyt käyttäjätyytyväisyys ja sitoutuminen.</p>
                            </div>
                            <div class="content-block">
                                <h4>Mittari:</h4>
                                <p>Käytettävyystestien tulokset (SUS), virheiden määrä, käyttäjäpalaute.</p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

    <!-- Add other sections as needed -->

</BaseLayout>

<style>
    .service-details {
        max-width: 900px;
        margin: 4rem auto; /* Added more margin */
        /* Use a more distinct background, or fallback if variables are too similar */
        background-color: var(--color-bg-surface, #ffffff); /* White surface */
        border: 1px solid var(--color-border-subtle, #e0e0e0); /* Subtle border */
        border-radius: var(--border-radius-lg); /* Slightly larger radius */
        padding: 0; /* Remove padding, handle internally */
        box-shadow: var(--shadow-lg); /* Enhanced shadow */
        overflow: hidden; /* Contain child elements */
    }

    .service-tabs {
        display: flex;
        /* Slightly different background for tab bar */
        background-color: var(--color-bg-muted, #f7f7f7); /* Muted background */
        border-bottom: 1px solid var(--color-border-subtle, #e0e0e0); /* Separator line */
        margin-bottom: 0; /* Remove margin */
        padding: var(--spacing-sm) var(--spacing-lg) 0; /* Padding for tabs */
        gap: var(--spacing-md); /* More gap */
    }

    .service-tabs .tab-button {
        padding: var(--spacing-md) var(--spacing-md); /* Increased horizontal padding */
        background: none;
        border: none;
        border-bottom: 3px solid transparent; /* Indicator space */
        cursor: pointer;
        font-weight: 500;
        color: var(--color-text-secondary);
        border-radius: 0; /* Remove radius */
        margin-bottom: -1px; /* Overlap bottom border */
        transition: all 0.25s ease-in-out;
        font-size: var(--font-size-base); /* Slightly larger font */
        font-family: inherit; /* Inherit font from parent */
        text-align: left; /* Align text to the left */
        position: relative; /* For potential pseudo-elements */
        top: 1px; /* Align with bottom border */
    }

    .service-tabs .tab-button:hover {
        color: var(--color-primary);
    }

    .service-tabs .tab-button.active {
        /* font-weight: 600; */ /* Removed to prevent size change */
        color: var(--color-primary);
        border-bottom-color: var(--color-primary);
        /* Make active tab background match content area for seamless look */
        background-color: var(--color-bg-surface, #ffffff);
    }

    .service-content {
        padding: var(--spacing-xl) var(--spacing-lg) var(--spacing-lg); /* More padding */
        /* Content background should match the card surface */
        background-color: var(--color-bg-surface, #ffffff);
    }

    .service-content .tab-pane {
        display: none; /* Hide inactive tabs */
        padding: 0; /* Remove padding here, handled by service-content */
        animation: fadeIn 0.4s ease-in-out; /* Add fade-in animation */
    }

     @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .service-content .tab-pane.active {
        display: block; /* Show active tab */
    }

    .tab-title {
        font-size: var(--font-size-xl); /* Larger title */
        margin-bottom: var(--spacing-lg);
        color: var(--color-text-primary);
        font-weight: 600;
    }

    .content-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); /* Adjusted minmax */
        gap: var(--spacing-xl); /* Increased gap */
    }

    .content-block h4 {
        font-weight: 600;
        margin-bottom: var(--spacing-sm); /* More space */
        color: var(--color-text-primary);
        font-size: var(--font-size-md); /* Larger subheading */
    }

    .content-block p {
        color: var(--color-text-secondary);
        font-size: var(--font-size-base); /* Larger paragraph text */
        line-height: var(--line-height-relaxed); /* More relaxed line height */
    }

    /* Clean up previous commented styles */

    /* Add more specific styles if needed */

    /* Force alignment for hero title and subtitle - REMOVED as we use contact styles now */
