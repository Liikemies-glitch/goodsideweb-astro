{/* Lisätään JavaScript tabi-toiminnallisuudelle */}
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const tabContainer = document.querySelector('.expertise-section .container');
        if (!tabContainer) return;

        const tabButtons = tabContainer.querySelectorAll('.tabs-placeholder .tab-button-style') satisfies NodeListOf<HTMLButtonElement>;
        const tabPanes = tabContainer.querySelectorAll('.tab-content-area .tab-pane') satisfies NodeListOf<HTMLElement>;

        tabButtons.forEach(button => {
            button.addEventListener('click', () => {
                const targetTabId = button.dataset.tab;
                if (!targetTabId) return;

                // Päivitä nappien tila
                tabButtons.forEach(btn => {
                    btn.classList.remove('active');
                    if (btn === button) {
                        btn.classList.add('active');
                    }
                });

                // Päivitä paneelien tila
                tabPanes.forEach(pane => {
                    if (pane.id === targetTabId) {
                        pane.classList.add('active');
                    } else {
                        pane.classList.remove('active');
                    }
                });
            });
        });

        // Varmista, että initial state on oikein (vaikka Astro hoitaa SSR)
        // Tämä on lisävarmistus client-puolella
        const initiallyActiveButton = tabContainer.querySelector('.tabs-placeholder .tab-button-style.active') as HTMLElement;
        const initialTargetId = initiallyActiveButton?.dataset.tab;

        if (initialTargetId) {
            tabPanes.forEach(pane => {
                 if (pane.id === initialTargetId) {
                    if (!pane.classList.contains('active')) {
                         pane.classList.add('active'); // Varmista aktiivinen luokka
                    }
                 } else {
                    if (pane.classList.contains('active')) {
                         pane.classList.remove('active'); // Varmista, ettei muita ole aktiivisena
                     }
                 }
            });
        }
    });
</script>