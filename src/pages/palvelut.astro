---
import BaseLayout from '../layouts/BaseLayout.astro';
import BackgroundPaths from '../components/BackgroundPaths.tsx';

const pageTitle = "SaaS-suunnittelun palvelut - The Good Side";
const pageDescription = "Luomme poikkeuksellisia digitaalisia kokemuksia, jotka auttavat SaaS-yrityksiä erottumaan, sitouttamaan käyttäjiä ja kasvamaan.";
---
<BaseLayout title={pageTitle} description={pageDescription}>
    <BackgroundPaths client:load />

    <!-- Uusi sisältö alkaa -->
    <section class="saas-hero" style="padding-top: 4rem; padding-bottom: 3rem; text-align: center;">
        <div class="container">
             <span class="tag" style="margin-bottom: 1rem;">Palvelumme</span>
            <h1>SaaS-suunnittelun huippuosaamista</h1>
            <p class="large-paragraph" style="max-width: 700px; margin: 1rem auto 3rem auto;">Luomme poikkeuksellisia digitaalisia kokemuksia, jotka auttavat SaaS-yrityksiä erottumaan, sitouttamaan käyttäjiä ja kasvamaan.</p>
        </div>
    </section>

    <!-- Osaamisalueet (korvaa vanhan tabi-osion) -->
     <section class="expertise-section">
        <div class="container">
            <!-- Tähän tulee tabi-navigaatio tai suoraan kortit -->
             <div class="tabs-placeholder" style="margin-bottom: 3rem; text-align: center;">
                 <!-- Päivitetyt tabi-napit attribuuteilla -->
                <button class="tab-button-style" data-tab="ui-ux">UI/UX-suunnittelu</button>
                <button class="tab-button-style active" data-tab="kayttajapolut">Käyttäjäpolut</button>
                <button class="tab-button-style" data-tab="positiointi">Tuotepositiointi</button>
            </div>

            {/* Uusi kontti tabi-sisällöille */}
            <div class="tab-content-area">

                {/* Tab 1: UI/UX-suunnittelu (Sisältö 1. kuvasta) */}
                <div id="ui-ux" class="tab-pane">
                    <div class="expertise-cards-grid">
                        {/* Kortti 1: Kojelautasuunnittelu */}
                        <div class="card">
                            <div class="card-icon"> {/* Icon: Layout */} <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"/><line x1="3" y1="9" x2="21" y2="9"/><line x1="9" y1="21" x2="9" y2="9"/></svg> </div>
                            <h4>Dashboard-suunnittelu</h4>
                            <p>Intuitiiviset dashboardit, jotka tekevät monimutkaisesta datasta helposti ymmärrettävää ja käytettävää.</p>
                            <ul>
                                <li>Datavisualisointi</li>
                                <li>Tekoälypohjaiset raportoinnit</li>
                                <li>Customoitavat kuvaajat</li>
                            </ul>
                            <a href="#" class="card-link">Lue lisää →</a>
                        </div>
                        {/* Kortti 2: Käyttäjäkokemus */}
                        <div class="card">
                            <div class="card-icon"> {/* Icon: Zap */} <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/></svg> </div>
                            <h4>Käyttäjäkokemus</h4>
                            <p>Sujuvat kokemukset, jotka ilahduttavat käyttäjiä ja vähentävät poistumista SaaS-tuotteestasi.</p>
                            <ul>
                                <li>Käyttäjäpolkujen kartoitus</li>
                                <li>Käytettävyystestaus</li>
                                <li>Vuorovaikutussuunnittelu</li>
                            </ul>
                            <a href="#" class="card-link">Lue lisää →</a>
                        </div>
                        {/* Kortti 3: UI-suunnittelujärjestelmät */}
                        <div class="card">
                            <div class="card-icon"> {/* Icon: Layers */} <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="12 2 2 7 12 12 22 7 12 2"/><polyline points="2 17 12 22 22 17"/><polyline points="2 12 12 17 22 12"/></svg> </div>
                            <h4>UI-suunnittelujärjestelmät</h4>
                            <p>Skaalautuvat suunnittelujärjestelmät, jotka varmistavat yhdenmukaisuuden ja nopeuttavat kehitystä.</p>
                            <ul>
                                <li>Komponenttikirjastot</li>
                                <li>Figma & Cursor</li>
                                <li>Dokumentaatio</li>
                            </ul>
                            <a href="#" class="card-link">Lue lisää →</a>
                        </div>
                    </div>
                </div>

                {/* Tab 2: Käyttäjäpolut (Olemassa oleva sisältö) */}
                <div id="kayttajapolut" class="tab-pane active">
                    <div class="expertise-cards-grid">
                        {/* Kortti 1: Käyttäjätutkimus */}
                        <div class="card">
                            <div class="card-icon"> {/* Icon: search */} <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg> </div>
                            <h4>Käyttäjätutkimus</h4>
                            <p>Syvällinen ymmärrys käyttäjistäsi laadullisten ja määrällisten tutkimusmenetelmien avulla.</p>
                            <ul>
                                <li>Käyttäjähaastattelut</li>
                                <li>Interaktiodatan analyysi</li>
                                <li>Käytettävyystestaus</li>
                            </ul>
                            <a href="#" class="card-link">Lue lisää →</a>
                        </div>
                        {/* Kortti 2: Persoonien kehittäminen */}
                        <div class="card">
                            <div class="card-icon"> {/* Icon: users */} <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg> </div>
                            <h4>Persoonien kehittäminen</h4>
                            <p>Yksityiskohtaiset käyttäjäpersoonat, jotka ohjaavat tuotepäätöksiä ja ominaisuuksien priorisointia.</p>
                            <ul>
                                <li>Demografinen profilointi</li>
                                <li>Käyttäytymismallit</li>
                                <li>Tavoitteet ja kipupisteet</li>
                            </ul>
                            <a href="#" class="card-link">Lue lisää →</a>
                        </div>
                        {/* Kortti 3: Polkukartoitus */}
                        <div class="card">
                            <div class="card-icon"> {/* Icon: map */} <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="1 6 1 22 8 18 16 22 23 18 23 2 16 6 8 2 1 6"/><line x1="8" y1="2" x2="8" y2="18"/><line x1="16" y1="6" x2="16" y2="22"/></svg> </div>
                            <h4>Polkukartoitus</h4>
                            <p>Visualisoidut käyttäjäpolut, jotka tunnistavat mahdollisuudet parantamiseen ja innovointiin.</p>
                            <ul>
                                <li>Kosketuspisteiden analyysi</li>
                                <li>Tunnekartoitus</li>
                                <li>Mahdollisuuksien tunnistaminen</li>
                            </ul>
                            <a href="#" class="card-link">Lue lisää →</a>
                        </div>
                    </div>
                </div>

                {/* Tab 3: Tuotepositiointi (Sisältö uudesta kuvasta) */}
                <div id="positiointi" class="tab-pane">
                    <div class="expertise-cards-grid">
                        {/* Kortti 1: Markkinaerottautuminen */}
                        <div class="card">
                             <div class="card-icon"> {/* Icon: Target */} <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><circle cx="12" cy="12" r="6"/><circle cx="12" cy="12" r="2"/></svg> </div>
                            <h4>Markkinaerottautuminen</h4>
                            <p>Strateginen positiointi, joka auttaa SaaS-tuotettasi erottumaan kilpailluilla markkinoilla.</p>
                             <ul>
                                <li>Kilpailija-analyysi</li>
                                <li>Ainutlaatuiset myyntiargumentit</li>
                                <li>Markkinamahdollisuuksien kartoitus</li>
                            </ul>
                            <a href="#" class="card-link">Lue lisää →</a>
                        </div>
                        {/* Kortti 2: Arvolupaus */}
                        <div class="card">
                             <div class="card-icon"> {/* Icon: Gift */} <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 12 20 22 4 22 4 12"/><rect x="2" y="7" width="20" height="5"/><line x1="12" y1="22" x2="12" y2="7"/><path d="M12 7H7.5a2.5 2.5 0 0 1 0-5C11 2 12 7 12 7z"/><path d="M12 7h4.5a2.5 2.5 0 0 0 0-5C13 2 12 7 12 7z"/></svg> </div>
                            <h4>Arvolupaus</h4>
                            <p>Selkeät, vakuuttavat arvolupaukset, jotka resonoivat kohderyhmäsi kanssa.</p>
                             <ul>
                                <li>Hyötyjen artikulointi</li>
                                <li>Ongelma-ratkaisu -kehystäminen</li>
                                <li>ROI:n osoittaminen</li>
                            </ul>
                            <a href="#" class="card-link">Lue lisää →</a>
                        </div>
                         {/* Kortti 3: Viestintäkehys */}
                         <div class="card">
                             <div class="card-icon"> {/* Icon: Clipboard */} <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"/><rect x="8" y="2" width="8" height="4" rx="1" ry="1"/></svg> </div>
                            <h4>Viestintäkehys</h4>
                            <p>Johdonmukainen viestintä, joka välittää tuotteesi arvon kaikissa kosketuspisteissä.</p>
                             <ul>
                                <li>Ydinviestintä</li>
                                <li>Ominaisuuksien positiointi</li>
                                <li>Kohderyhmäkohtaiset narratiivit</li>
                            </ul>
                            <a href="#" class="card-link">Lue lisää →</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

     {/* ADDED Menestystarinoita-osio */}
    <section class="testimonial-section" style="background-color: var(--color-bg-secondary); padding: 4rem 0;">
        <div class="container testimonial-container">
             <div class="testimonial-content">
                 <div class="section__header">
                     <h2 class="section__title">Menestystarinoita</h2>
                 </div>
                 {/* Card 1 (Eemel.com) - REWRITTEN with results after footer */}
                 <div class="testimonial-card">
                    <div class="testimonial-card-content">
                        <h3>Erinomaista UX-suunnittelua aikataulussa</h3>
                        <blockquote class="testimonial-quote">
                             <p>The employees of The Goodside handled the task brilliantly, and the outcome of the UX design work was excellent. Everything was done on schedule, as agreed, and in an honest and straightforward manner.</p>
                        </blockquote>
                        <footer class="testimonial-author">
                            <img src="/images/testimonials/jarkko.webp" alt="Jarkko Kähkönen" class="author-image" />
                            <span class="author-info">
                                Jarkko Kähkönen<br/>
                                Founder CEO, Eemel.com
                            </span>
                        </footer>
                        {/* Results Section START - After Footer */}
                        <div class="testimonial-results">
                            <h4 class="results-heading">Tulokset:</h4>
                            <div class="metric-item">
                                <div class="metric-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="19" y1="5" x2="5" y2="19" /><circle cx="6.5" cy="6.5" r="2.5" /><circle cx="17.5" cy="17.5" r="2.5" /></svg>
                                </div>
                                <div class="metric-details">
                                    <span class="metric-label">Media Budget ROI</span>
                                    <span class="metric-change positive">+622% ROI</span>
                                </div>
                            </div>
                            <div class="metric-item">
                                <div class="metric-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="19" x2="12" y2="5" /><polyline points="5 12 12 5 19 12" /></svg>
                                </div>
                                <div class="metric-details">
                                    <span class="metric-label">ARR Increase</span>
                                    <span class="metric-change positive">+46%</span>
                                </div>
                            </div>
                        </div>
                        {/* Results Section END */}
                    </div>
                    <div class="testimonial-card-image-area">
                        <img src="/images/references/eemel.png" alt="Eemel.com referenssikuva" style="width: 100%; height: auto; display: block; border-radius: var(--border-radius-md); object-fit: contain;" />
                    </div>
                 </div>
                 {/* Card 2 (Anna-Mari) - Remains the same */}
                 <div class="testimonial-card">
                    <div class="testimonial-card-content">
                        <h3>Luottamusta herättävä testijakso</h3>
                        <blockquote class="testimonial-quote">
                            <p>Goodside tarjosi design palvelulleen testijakson yhden tuotealueemme uudistamiseksi. Kokeilujakson aikana pääsin tutustumaan palveluun käytännössä. Olin erittäin tyytyväinen, sillä kokeilu erotti Goodsiden selvästi kilpailijoista ja rakensi luottamusta. Goodsiden asiakaspalvelu on ensiluokkaista - koin tulleeni kuulluksi ja sain pelkällä kokeilulla kehitysprojektiani tehokkaasti eteenpäin.</p>
                        </blockquote>
                         <footer class="testimonial-author">
                             <img src="/images/testimonials/Anna-mari.webp" alt="Anna-Mari Jääskeläinen" class="author-image" />
                            <span class="author-info">
                                Anna-Mari Jääskeläinen<br/>
                                Product Owner, Seppo.io
                            </span>
                        </footer>
                    </div>
                    <div class="testimonial-card-image-area">
                         <svg width="100%" height="100%" viewBox="0 0 16 9" fill="none" xmlns="http://www.w3.org/2000/svg" role="img" aria-labelledby="placeholder-title-1" style="display: block; border-radius: var(--border-radius-md);"><title id="placeholder-title-1">Referenssikuvan paikkamerkki</title><rect width="16" height="9" fill="#e2e8f0"></rect></svg>
                     </div>
                </div>
                {/* Card 3 (Joni) - NOW THIRD */}
                 <div class="testimonial-card">
                     <div class="testimonial-card-content">
                         <h3>Selkeä hinnoittelu ja upeat tulokset</h3>
                         <blockquote class="testimonial-quote">
                             <p>Very clear pricing and contract model was keypoint why we made a deal. No risk and transparent cost. During the project results was in awesome level. Communication was easy all the way.</p>
                         </blockquote>
                         <footer class="testimonial-author">
                              <img src="/images/testimonials/joni räsänen.webp" alt="Joni Räsänen" class="author-image" />
                             <span class="author-info">
                                 Joni Räsänen<br/>
                                 CTO, Gebwell
                             </span>
                         </footer>
                        </div>
                         <div class="testimonial-card-image-area">
                              <svg width="100%" height="100%" viewBox="0 0 16 9" fill="none" xmlns="http://www.w3.org/2000/svg" role="img" aria-labelledby="placeholder-title-3" style="display: block; border-radius: var(--border-radius-md);"><title id="placeholder-title-3">Referenssikuvan paikkamerkki</title><rect width="16" height="9" fill="#e2e8f0"></rect></svg>
                         </div>
                 </div>
             </div>
        </div>
    </section>

<style>
     /* Yleiset päivitykset */
    .large-paragraph {
        font-size: var(--font-size-lg);
        color: var(--color-text-secondary);
        line-height: var(--line-height-relaxed);
    }

    /* REMOVED .badge styles */
    /*
    .badge {
        background-color: var(--color-bg-accent); 
        color: var(--color-text-on-accent); 
        padding: var(--spacing-xs) var(--spacing-md);
        border-radius: var(--border-radius-full);
        font-size: var(--font-size-sm);
        font-weight: 500;
    }
    */

     /* Tabi-nappien tyyli (yksinkertaistettu esimerkki) */
     .tabs-placeholder {
        display: flex;
        justify-content: center;
        gap: var(--spacing-sm);
        border-bottom: 1px solid var(--color-border-subtle);
        margin-bottom: 3rem;
    }
    .tab-button-style {
        padding: var(--spacing-sm) var(--spacing-lg);
        background: none;
        border: none;
        border-bottom: 3px solid transparent;
        cursor: pointer;
        font-weight: 500;
        color: var(--color-text-secondary);
        transition: all 0.2s ease;
        font-size: var(--font-size-md);
         margin-bottom: -1px; /* Nosta napit viivan päälle */
        font-family: inherit; /* Varmistetaan fontin perintä */
    }
    .tab-button-style.active {
        color: var(--color-primary);
        border-bottom-color: var(--color-primary);
    }
     .tab-button-style:hover:not(.active) {
         color: var(--color-primary);
          opacity: 1;
     }


    /* Osaamiskorttien gridi */
    .expertise-cards-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: var(--spacing-xl);
    }

    /* Kortin tyylit */
    .card {
        background-color: var(--color-bg-surface);
        border: 1px solid var(--color-border-subtle);
        border-radius: var(--border-radius-lg);
        padding: var(--spacing-xl);
        transition: box-shadow 0.3s ease, transform 0.3s ease;
         display: flex;
        flex-direction: column;
    }

     .card:hover {
        box-shadow: var(--shadow-lg);
         transform: translateY(-4px);
    }

     .card-icon {
        margin-bottom: var(--spacing-md);
        width: 48px; /* Increased size slightly */
        height: 48px;
        background-color: var(--color-primary-light);
        border-radius: var(--border-radius-md);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--primary-color);
    }

     .card h4 {
        font-size: var(--font-size-xl);
        font-weight: 600;
        margin-bottom: var(--spacing-sm);
        color: var(--color-text-primary);
    }

     .card p {
        color: var(--color-text-secondary);
        line-height: var(--line-height-normal);
        flex-grow: 1; /* Pusketaan linkki alas */
         margin-bottom: var(--spacing-lg);
    }

     .card ul {
        list-style: none;
        padding-left: 0;
        margin-bottom: var(--spacing-lg);
        color: var(--color-text-secondary);
    }

    .card li {
        position: relative;
        padding-left: 1.5em; /* Tilaa ikonille */
        margin-bottom: var(--spacing-sm);
    }

    .card li::before {
        content: '•'; /* Korvaa tällä tai SVG-ikoni */
        position: absolute;
        left: 0;
        color: var(--color-primary); /* Käytä teeman väriä */
        font-weight: bold;
    }

     .card-link {
        color: var(--primary-color);
        font-weight: 500;
        text-decoration: none;
        transition: color 0.2s ease;
         align-self: flex-start; /* Estää linkkiä venymästä */
    }

    .card-link:hover {
        text-decoration: underline;
    }

     /* ADDED Testimonial section styles */
     .testimonial-section {
        /* Background set inline */
     }
     .testimonial-container {
         /* Removed flex/grid/block styles to let global .container take effect */
     }

    /* testimonial-content is the flex container for cards */
    .testimonial-content {
        display: flex;
        flex-direction: column;
        gap: var(--spacing-xl); /* Increased gap between cards */
    }

    /* Updated Card Styles */
    .testimonial-card {
        background-color: #ffffff; 
        border-radius: 12px; 
        padding: var(--spacing-xl);
        border: 1px solid var(--color-border-subtle);
        display: flex;
        align-items: flex-start;
        gap: var(--spacing-xl); 
        width: 100%; /* Cards fill the container width */
        box-shadow: 0 4px 15px rgba(0,0,0,0.05); 
    }

    .testimonial-card-content {
        flex-basis: 50%; /* UPDATED width */
        flex-shrink: 0;
    }
    .testimonial-card-image-area {
        flex-basis: 50%; /* UPDATED width */
        flex-shrink: 0;
        /* background-color removed */
        border-radius: var(--border-radius-md);
        display: flex; /* Use flex to center image potentially */
        align-items: center; /* Center vertically if needed */
        justify-content: center; /* Center horizontally */
        /* flex-direction: column; */ /* REMOVED */
        /* gap: var(--spacing-lg); */ /* REMOVED */
    }
    .testimonial-card-image-area svg {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
        color: var(--color-text-secondary);
    }

     /* Cleaned up quote styles */
      .testimonial-quote {
        margin: 0 0 var(--spacing-lg) 0; /* Bottom margin before author/results */
        padding: 0;
        border: none;
      }
       .testimonial-quote p {
        font-size: 1.125rem; /* Slightly larger quote text (adjust as needed) */
        font-style: italic;
        color: var(--color-text-secondary);
        line-height: var(--line-height-relaxed);
        margin-bottom: var(--spacing-lg);
     }
      /* Updated author styles */
      .testimonial-author {
         display: flex; /* Make footer flex to align image and text */
         align-items: center;
         gap: var(--spacing-md); /* Space between avatar and text */
         margin-top: var(--spacing-lg); /* Space above author block */
      }
      /* Author image (avatar) styles */
      .author-image {
         width: 40px; /* Slightly smaller avatar */
         height: 40px;
         border-radius: 50%; /* Circular */
         object-fit: cover; 
         flex-shrink: 0; /* Prevent avatar shrinking */
      }
      /* Author info text styles */
      .author-info {
         font-size: var(--font-size-base);
         color: var(--color-text-primary);
         line-height: var(--line-height-tight);
     }
      /* Style the title/second line within author-info */
      .author-info br + span { 
         font-size: var(--font-size-xs); /* Smaller font size for title */
         color: var(--color-text-muted, #6b7280); /* Lighter color for title */
      }

     @media (max-width: 768px) {
        .testimonial-content {
            gap: var(--spacing-lg);
        }
        .testimonial-card {
            flex-direction: column; /* Stack image area below text content */
            align-items: stretch; /* Stretch items to full width */
