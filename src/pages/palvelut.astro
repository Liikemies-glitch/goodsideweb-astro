</style>

<script>
 // Basic tab functionality
 document.addEventListener('DOMContentLoaded', () => {
     const tabButtons = document.querySelectorAll('.service-tabs .tab-button') satisfies NodeListOf<HTMLButtonElement>;
     const tabPanes = document.querySelectorAll('.service-content .tab-pane') satisfies NodeListOf<HTMLElement>;
     const initiallyActiveButton = document.querySelector('.service-tabs .tab-button.active') as HTMLButtonElement | null; // Get initially active button

     const activateTab = (button: HTMLButtonElement) => {
        // Deactivate all first
        tabButtons.forEach(btn => btn.classList.remove('active'));
        tabPanes.forEach(pane => {
            pane.classList.remove('active');
            // pane.style.display = 'none'; // Let CSS handle display via active class
        });

        // Activate clicked button
        button.classList.add('active');

        // Activate corresponding pane
        const tabId = button.getAttribute('data-tab');
        if (tabId) {
            const activePane = document.getElementById(tabId);
            if (activePane) {
                activePane.classList.add('active');
                // activePane.style.display = 'block'; // Let CSS handle display via active class
            }
        }
     };


     tabButtons.forEach(button => {
         button.addEventListener('click', () => {
             activateTab(button);
         });
     });

     // Initial activation - Ensure the initially active pane has the class
     if (initiallyActiveButton) {
         const initialPaneId = initiallyActiveButton.getAttribute('data-tab');
         if (initialPaneId) {
              const initialPane = document.getElementById(initialPaneId);
              if(initialPane && !initialPane.classList.contains('active')) {
                  // Ensure the correct pane is marked active if JS runs after initial render
                  tabPanes.forEach(pane => pane.classList.remove('active'));
                  initialPane.classList.add('active');
                  // initialPane.style.display = 'block'; // Let CSS handle display
              }
          }
     } else if (tabButtons.length > 0) {
         // Fallback: activate the first tab if none marked active in HTML
         activateTab(tabButtons[0]);
     }
 });
</script> 