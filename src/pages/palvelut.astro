---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Palvelut - The Good Side";
const pageDescription = "Kiihdytä SaaS-liiketoimintasi kasvua The Good Side:n palveluilla. Keskitymme ratkaisemaan yleisimmät kasvun esteet SaaS-polullasi.";
---
<BaseLayout title={pageTitle} description={pageDescription}>
    <!-- Hero Section for Palvelut (using contact styles) -->
    <section class="contact-hero" style="padding-top: 4rem; padding-bottom: 2rem; background-color: var(--color-bg-secondary); min-height: auto !important;">
        <div class="container">
            <div class="contact-content">
                <h1>Kiihdytä SaaS-liiketoimintasi kasvua avullamme</h1>
                <p class="contact-description">Autamme tuotetiimejä rakentamaan menestyvää SaaS-liiketoimintaa yhdistämällä tuotestrategian, designin ja markkinoinnin toimivaksi kokonaisuudeksi.</p>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section class="services" style="padding-top: 0; padding-bottom: 4rem;">
        <div class="container" style="padding-left: 0; padding-right: 0;">
            <!-- Added back the subtitle using index page style -->
            <h2 class="logo-wall__title" style="text-align: left; margin-bottom: var(--spacing-xl); padding-left: 0; padding-right: 0;">Keskitymme ratkaisemaan yleisimmät kasvun esteet SaaS-polullasi.</h2>

            <!-- Service Details / Tabs Placeholder -->
            <div class="service-details" style="max-width: 900px; margin: 0 auto; background-color: var(--color-bg-secondary); border-radius: var(--border-radius-md); padding: var(--spacing-lg); box-shadow: var(--shadow-sm);">
                <!-- Tab Navigation Placeholder -->
                <div class="service-tabs" style="margin-bottom: var(--spacing-lg); display: flex; gap: var(--spacing-sm); border-bottom: 1px solid var(--color-border); padding-bottom: var(--spacing-md);">
                    <button class="tab-button active" data-tab="tuotepositiointi" style="padding: 0.5rem 1rem; background: none; border: none; border-bottom: 2px solid transparent; cursor: pointer; font-weight: 500; color: var(--color-text-secondary);">Tuotestrategia</button>
                    <button class="tab-button" data-tab="tuotepositiointi" style="padding: 0.5rem 1rem; background: var(--color-primary-light); border: none; border-bottom: 2px solid var(--color-primary); cursor: pointer; font-weight: 600; color: var(--color-primary); border-radius: var(--border-radius-sm) var(--border-radius-sm) 0 0;">Tuotepositiointi</button>
                    <button class="tab-button" data-tab="saas-strategia" style="padding: 0.5rem 1rem; background: none; border: none; border-bottom: 2px solid transparent; cursor: pointer; font-weight: 500; color: var(--color-text-secondary);">SaaS-strategia</button>
                    <button class="tab-button" data-tab="markkina-asema" style="padding: 0.5rem 1rem; background: none; border: none; border-bottom: 2px solid transparent; cursor: pointer; font-weight: 500; color: var(--color-text-secondary);">Markkina-asema</button>
                     <!-- Add more tabs as needed -->
                </div>

                <!-- Tab Content Area -->
                <div class="service-content">
                    <!-- Content for Tehokas tuotepositiointi -->
                    <div id="tuotepositiointi" class="tab-pane active">
                        <h3 style="font-size: var(--font-size-lg); margin-bottom: var(--spacing-md);">Tehokas tuotepositiointi</h3>

                        <div class="content-block" style="margin-bottom: var(--spacing-md);">
                            <h4 style="font-weight: 600; margin-bottom: var(--spacing-xs);">Ongelma:</h4>
                            <p style="color: var(--color-text-secondary);">Kasvustrategian toteutus ontuu resurssipulan tai epäselvän suunnan vuoksi. Tuote ei erotu kilpailijoista.</p>
                        </div>

                        <div class="content-block" style="margin-bottom: var(--spacing-md);">
                            <h4 style="font-weight: 600; margin-bottom: var(--spacing-xs);">Ratkaisu:</h4>
                            <p style="color: var(--color-text-secondary);">Kirkastamme ydinviestimme ja kohderyhmänne. Yhdistämme tuotestrategian, designin ja markkinoinnin tukemaan positiointia.</p>
                        </div>

                        <div class="content-block" style="margin-bottom: var(--spacing-md);">
                            <h4 style="font-weight: 600; margin-bottom: var(--spacing-xs);">Hyödyt:</h4>
                            <p style="color: var(--color-text-secondary);">Selkeämpi markkina-asema, tehokkaampi myynti ja markkinointi, parempi asiakasymmärrys.</p>
                        </div>

                        <div class="content-block">
                            <h4 style="font-weight: 600; margin-bottom: var(--spacing-xs);">Mittari:</h4>
                            <p style="color: var(--color-text-secondary);">Markkinaosuuden kasvu, konversioasteet, asiakaspalaute.</p>
                        </div>
                    </div>

                    <!-- Add content for other tabs here -->
                     <div id="saas-strategia" class="tab-pane" style="display: none;">
                        </div>
                    <div id="markkina-asema" class="tab-pane" style="display: none;">
                       </div>

                </div>
            </div>
        </div>
    </section>

    <!-- Add other sections as needed -->

</BaseLayout>

<style>
    /* Basic styles for tabs - could be moved to global CSS */
    .service-tabs .tab-button {
        /* Styles moved inline for simplicity, consider moving to styles.css */
    }

    .service-tabs .tab-button.active {
        /* Styles moved inline */
        /* border-bottom-color: var(--color-primary); */
        /* color: var(--color-primary); */
        /* font-weight: 600; */
    }

    .service-content .tab-pane {
        display: none; /* Hide inactive tabs */
    }

    .service-content .tab-pane.active {
        display: block; /* Show active tab */
    }

    /* Add more specific styles if needed */

    /* Force alignment for hero title and subtitle - REMOVED as we use contact styles now */
    /*
    .hero__content .hero__title,
    .hero__content .hero__subtitle {
        margin-left: 0;
        padding-left: 0;
    }
    */

</style>

<script>
 // Basic tab functionality (optional, can be enhanced)
 // Use `satisfies` for better type checking with DOM elements
 document.addEventListener('DOMContentLoaded', () => {
     const tabButtons = document.querySelectorAll('.service-tabs .tab-button') satisfies NodeListOf<HTMLButtonElement>;
     const tabPanes = document.querySelectorAll('.service-content .tab-pane') satisfies NodeListOf<HTMLElement>;

     // Function to deactivate all tabs and panes
     const deactivateTabs = () => {
         tabButtons.forEach(button => {
             button.classList.remove('active');
             button.style.fontWeight = '500'; // Reset font weight
             button.style.color = 'var(--color-text-secondary)';
             button.style.borderBottomColor = 'transparent';
             button.style.background = 'none'; // Reset background
         });
         tabPanes.forEach(pane => {
             pane.classList.remove('active');
             pane.style.display = 'none'; // Hide pane
         });
     };

     tabButtons.forEach(button => {
         button.addEventListener('click', () => {
             deactivateTabs(); // Deactivate all first

             // Activate clicked button
             button.classList.add('active');
             button.style.fontWeight = '600';
             button.style.color = 'var(--color-primary)';
             button.style.borderBottomColor = 'var(--color-primary)';
             button.style.background = 'var(--color-primary-light)'; // Highlight background

             // Activate corresponding pane
             const tabId = button.getAttribute('data-tab');
             // Check if tabId is not null before using it
             if (tabId) {
                 const activePane = document.getElementById(tabId);
                 if (activePane) {
                     activePane.classList.add('active');
                     activePane.style.display = 'block'; // Show pane
                 }
             }
         });
     });

     // Initial activation based on HTML class (Tuotepositiointi)
     // Assert the type of the selected element
     const initiallyActiveButton = document.querySelector('.service-tabs .tab-button[data-tab="tuotepositiointi"]') as HTMLButtonElement | null;
     if (initiallyActiveButton) {
          deactivateTabs(); // Ensure clean state
          // No need to add 'active' class here, it's done by the click simulation or CSS
          // Ensure the element exists before accessing properties
          initiallyActiveButton.style.fontWeight = '600';
          initiallyActiveButton.style.color = 'var(--color-primary)';
          initiallyActiveButton.style.borderBottomColor = 'var(--color-primary)';
          initiallyActiveButton.style.background = 'var(--color-primary-light)';

          const initialPaneId = initiallyActiveButton.getAttribute('data-tab');
          if (initialPaneId) {
              const initialPane = document.getElementById(initialPaneId);
                if(initialPane) {
                    initialPane.classList.add('active');
                    initialPane.style.display = 'block';
                }
          }

     } else {
         // Fallback: activate the first tab if none marked active
         if (tabButtons.length > 0) {
             // Ensure the first button is treated as an HTMLElement/Button to allow click
             (tabButtons[0] as HTMLButtonElement).click();
         }
     }
 });
</script> 