---
import BaseLayout from '../layouts/BaseLayout.astro';
import BackgroundPaths from '../components/BackgroundPaths.tsx';

const pageTitle = "SaaS-suunnittelun palvelut - The Good Side";
const pageDescription = "Luomme poikkeuksellisia digitaalisia kokemuksia, jotka auttavat SaaS-yrityksiä erottumaan, sitouttamaan käyttäjiä ja kasvamaan.";
---
<BaseLayout title={pageTitle} description={pageDescription}>
    <BackgroundPaths client:load />

    <!-- Uusi sisältö alkaa -->
    <section class="saas-hero" style="padding-top: 4rem; padding-bottom: 3rem; text-align: center;">
        <div class="container">
             <span class="tag" style="margin-bottom: 1rem;">Palvelumme</span>
            <h1>SaaS-suunnittelun huippuosaamista</h1>
            <p class="large-paragraph" style="max-width: 700px; margin: 1rem auto 3rem auto;">Luomme poikkeuksellisia digitaalisia kokemuksia, jotka auttavat SaaS-yrityksiä erottumaan, sitouttamaan käyttäjiä ja kasvamaan.</p>
        </div>
    </section>

    <!-- Osaamisalueet (korvaa vanhan tabi-osion) -->
     <section class="expertise-section">
        <div class="container">
            <!-- Tähän tulee tabi-navigaatio tai suoraan kortit -->
             <div class="tabs-placeholder" style="margin-bottom: 3rem; text-align: center;">
                 <!-- Päivitetyt tabi-napit attribuuteilla -->
                <button class="tab-button-style" data-tab="ui-ux">UI/UX-suunnittelu</button>
                <button class="tab-button-style active" data-tab="kayttajapolut">Käyttäjäpolut</button>
                <button class="tab-button-style" data-tab="positiointi">Tuotepositiointi</button>
            </div>

            {/* Uusi kontti tabi-sisällöille */}
            <div class="tab-content-area">

                {/* Tab 1: UI/UX-suunnittelu (Sisältö 1. kuvasta) */}
                <div id="ui-ux" class="tab-pane">
                    <div class="expertise-cards-grid">
                        {/* Kortti 1: Kojelautasuunnittelu */}
                        <div class="card">
                            <div class="card-icon"> {/* Icon: Layout */} <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"/><line x1="3" y1="9" x2="21" y2="9"/><line x1="9" y1="21" x2="9" y2="9"/></svg> </div>
                            <h4>Dashboard-suunnittelu</h4>
                            <p>Intuitiiviset dashboardit, jotka tekevät monimutkaisesta datasta helposti ymmärrettävää ja käytettävää.</p>
                            <ul>
                                <li>Datavisualisointi</li>
                                <li>Tekoälypohjaiset raportoinnit</li>
                                <li>Customoitavat kuvaajat</li>
                            </ul>
                            <a href="#" class="card-link">Lue lisää →</a>
                        </div>
                        {/* Kortti 2: Käyttäjäkokemus */}
                        <div class="card">
                            <div class="card-icon"> {/* Icon: Zap */} <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/></svg> </div>
                            <h4>Käyttäjäkokemus</h4>
                            <p>Sujuvat kokemukset, jotka ilahduttavat käyttäjiä ja vähentävät poistumista SaaS-tuotteestasi.</p>
                            <ul>
                                <li>Käyttäjäpolkujen kartoitus</li>
                                <li>Käytettävyystestaus</li>
                                <li>Vuorovaikutussuunnittelu</li>
                            </ul>
                            <a href="#" class="card-link">Lue lisää →</a>
                        </div>
                        {/* Kortti 3: UI-suunnittelujärjestelmät */}
                        <div class="card">
                            <div class="card-icon"> {/* Icon: Layers */} <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="12 2 2 7 12 12 22 7 12 2"/><polyline points="2 17 12 22 22 17"/><polyline points="2 12 12 17 22 12"/></svg> </div>
                            <h4>UI-suunnittelujärjestelmät</h4>
                            <p>Skaalautuvat suunnittelujärjestelmät, jotka varmistavat yhdenmukaisuuden ja nopeuttavat kehitystä.</p>
                            <ul>
                                <li>Komponenttikirjastot</li>
                                <li>Figma & Cursor</li>
                                <li>Dokumentaatio</li>
                            </ul>
                            <a href="#" class="card-link">Lue lisää →</a>
                        </div>
                    </div>
                </div>

                {/* Tab 2: Käyttäjäpolut (Olemassa oleva sisältö) */}
                <div id="kayttajapolut" class="tab-pane active">
                    <div class="expertise-cards-grid">
                        {/* Kortti 1: Käyttäjätutkimus */}
                        <div class="card">
                            <div class="card-icon"> {/* Icon: search */} <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg> </div>
                            <h4>Käyttäjätutkimus</h4>
                            <p>Syvällinen ymmärrys käyttäjistäsi laadullisten ja määrällisten tutkimusmenetelmien avulla.</p>
                            <ul>
                                <li>Käyttäjähaastattelut</li>
                                <li>Interaktiodatan analyysi</li>
                                <li>Käytettävyystestaus</li>
                            </ul>
                            <a href="#" class="card-link">Lue lisää →</a>
                        </div>
                        {/* Kortti 2: Persoonien kehittäminen */}
                        <div class="card">
                            <div class="card-icon"> {/* Icon: users */} <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg> </div>
                            <h4>Persoonien kehittäminen</h4>
                            <p>Yksityiskohtaiset käyttäjäpersoonat, jotka ohjaavat tuotepäätöksiä ja ominaisuuksien priorisointia.</p>
                            <ul>
                                <li>Demografinen profilointi</li>
                                <li>Käyttäytymismallit</li>
                                <li>Tavoitteet ja kipupisteet</li>
                            </ul>
                            <a href="#" class="card-link">Lue lisää →</a>
                        </div>
                        {/* Kortti 3: Polkukartoitus */}
                        <div class="card">
                            <div class="card-icon"> {/* Icon: map */} <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="1 6 1 22 8 18 16 22 23 18 23 2 16 6 8 2 1 6"/><line x1="8" y1="2" x2="8" y2="18"/><line x1="16" y1="6" x2="16" y2="22"/></svg> </div>
                            <h4>Polkukartoitus</h4>
                            <p>Visualisoidut käyttäjäpolut, jotka tunnistavat mahdollisuudet parantamiseen ja innovointiin.</p>
                            <ul>
                                <li>Kosketuspisteiden analyysi</li>
                                <li>Tunnekartoitus</li>
                                <li>Mahdollisuuksien tunnistaminen</li>
                            </ul>
                            <a href="#" class="card-link">Lue lisää →</a>
                        </div>
                    </div>
                </div>

                {/* Tab 3: Tuotepositiointi (Sisältö uudesta kuvasta) */}
                <div id="positiointi" class="tab-pane">
                    <div class="expertise-cards-grid">
                        {/* Kortti 1: Markkinaerottautuminen */}
                        <div class="card">
                             <div class="card-icon"> {/* Icon: Target */} <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><circle cx="12" cy="12" r="6"/><circle cx="12" cy="12" r="2"/></svg> </div>
                            <h4>Markkinaerottautuminen</h4>
                            <p>Strateginen positiointi, joka auttaa SaaS-tuotettasi erottumaan kilpailluilla markkinoilla.</p>
                             <ul>
                                <li>Kilpailija-analyysi</li>
                                <li>Ainutlaatuiset myyntiargumentit</li>
                                <li>Markkinamahdollisuuksien kartoitus</li>
                            </ul>
                            <a href="#" class="card-link">Lue lisää →</a>
                        </div>
                        {/* Kortti 2: Arvolupaus */}
                        <div class="card">
                             <div class="card-icon"> {/* Icon: Gift */} <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 12 20 22 4 22 4 12"/><rect x="2" y="7" width="20" height="5"/><line x1="12" y1="22" x2="12" y2="7"/><path d="M12 7H7.5a2.5 2.5 0 0 1 0-5C11 2 12 7 12 7z"/><path d="M12 7h4.5a2.5 2.5 0 0 0 0-5C13 2 12 7 12 7z"/></svg> </div>
                            <h4>Arvolupaus</h4>
                            <p>Selkeät, vakuuttavat arvolupaukset, jotka resonoivat kohderyhmäsi kanssa.</p>
                             <ul>
                                <li>Hyötyjen artikulointi</li>
                                <li>Ongelma-ratkaisu -kehystäminen</li>
                                <li>ROI:n osoittaminen</li>
                            </ul>
                            <a href="#" class="card-link">Lue lisää →</a>
                        </div>
                         {/* Kortti 3: Viestintäkehys */}
                         <div class="card">
                             <div class="card-icon"> {/* Icon: Clipboard */} <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"/><rect x="8" y="2" width="8" height="4" rx="1" ry="1"/></svg> </div>
                            <h4>Viestintäkehys</h4>
                            <p>Johdonmukainen viestintä, joka välittää tuotteesi arvon kaikissa kosketuspisteissä.</p>
                             <ul>
                                <li>Ydinviestintä</li>
                                <li>Ominaisuuksien positiointi</li>
                                <li>Kohderyhmäkohtaiset narratiivit</li>
                            </ul>
                            <a href="#" class="card-link">Lue lisää →</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

     {/* RESTRUCTURED Menestystarinoita-osio -> Case Studies */}
    <section class="case-studies-section" style="padding: 4rem 0;">
        <div class="container">
             {/* Optional: Add a section header if needed */}
             {/* <div class="section__header" style="text-align: center; margin-bottom: 3rem;">
                 <h2 class="section__title">Asiakastyöt</h2>
             </div> */}

             {/* Case Study 1: Eemel.com (Previously Card 2) */}
             <div class="case-study-item">
                 <div class="case-study-content">
                    <span class="tag case-study-tag">Case Study</span>
                    <h3 class="case-study-title">Eemel.com</h3>
                    <p class="case-study-description">Tehostimme Eemel.comin käyttökokemusta strategisella suunnittelulla, mikä johti merkittäviin parannuksiin keskeisissä liiketoimintamittareissa ja asiakastyytyväisyydessä.</p>
                    <a href="#" class="button case-study-button">
                        Katso Case Study <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="margin-left: 4px; vertical-align: middle;"><polyline points="9 18 15 12 9 6"/></svg>
                    </a>
                     <div class="case-study-results">
                        <div class="result-item">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#10b981" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="result-icon"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
                            <span>+622% ROI mediabudjetille</span>
                        </div>
                        <div class="result-item">
                             <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#10b981" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="result-icon"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
                            <span>+46% ARR kasvu</span>
                        </div>
                    </div>
                 </div>
                 <div class="case-study-image-area">
                     <img src="/images/references/eemel.webp" alt="Eemel.com Case Study Image" class="case-study-image"/>
                 </div>
             </div>

             {/* Case Study 2: Seppo.io (Previously Card 1) */}
              <div class="case-study-item">
                 <div class="case-study-content">
                     <span class="tag case-study-tag">Case Study</span>
                     <h3 class="case-study-title">Seppo.io</h3>
                     <p class="case-study-description">Yhteistyömme kokeilujakson kautta autoimme Seppo.io:ta validoimaan suunnitteluprosessimme arvon, rakentamaan luottamusta ja edistämään tehokkaasti heidän tuotekehitystään.</p>
                     <a href="#" class="button case-study-button">
                         Published soon <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="margin-left: 4px; vertical-align: middle;"><polyline points="9 18 15 12 9 6"/></svg>
                     </a>
                     <div class="case-study-results">
                         <div class="result-item">
                             <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#10b981" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="result-icon"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
                             <span>To be accounced</span>
                         </div>
                         <div class="result-item">
                              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#10b981" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="result-icon"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
                             <span>To be accounced</span>
                         </div>
                     </div>
                 </div>
                 <div class="case-study-image-area">
                      <img src="/images/references/seppo-reference.webp" alt="Seppo.io Case Study Image" class="case-study-image"/>
                 </div>
             </div>

            {/* Case Study 3: Gebwell (Previously Card 3) */}
             <div class="case-study-item">
                 <div class="case-study-content">
                    <span class="tag case-study-tag">Case Study</span>
                    <h3 class="case-study-title">Gebwell</h3>
                    <p class="case-study-description">Läpinäkyvä prosessimme ja tuloshakuisuutemme auttoivat Gebwelliä saavuttamaan projektitavoitteensa. Selkeä ja helppo viestintä varmisti sujuvan yhteistyön koko projektin ajan.</p>
                     <a href="#" class="button case-study-button">
                         Published soon <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="margin-left: 4px; vertical-align: middle;"><polyline points="9 18 15 12 9 6"/></svg>
                     </a>
                    <div class="case-study-results">
                         <div class="result-item">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#10b981" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="result-icon"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
                            <span>To be accounced</span>
                        </div>
                        <div class="result-item">
                             <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#10b981" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="result-icon"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
                            <span>To be accounced</span>
                        </div>
                    </div>
                 </div>
                 <div class="case-study-image-area">
                      <img src="/images/references/gebwell4.webp" alt="Gebwell Case Study Image" class="case-study-image"/>
                 </div>
             </div>

        </div>
    </section>

<style>
     /* Yleiset päivitykset */
    .large-paragraph {
        font-size: var(--font-size-lg);
        color: var(--color-text-secondary);
        line-height: var(--line-height-relaxed);
    }

    /* REMOVED .badge styles */
    /*
    .badge {
        background-color: var(--color-bg-accent); 
        color: var(--color-text-on-accent); 
        padding: var(--spacing-xs) var(--spacing-md);
        border-radius: var(--border-radius-full);
        font-size: var(--font-size-sm);
        font-weight: 500;
    }
    */

     /* Tabi-nappien tyyli (yksinkertaistettu esimerkki) */
     .tabs-placeholder {
        display: flex;
        justify-content: center;
        gap: var(--spacing-sm);
        border-bottom: 1px solid var(--color-border-subtle);
        margin-bottom: 3rem;
    }
    .tab-button-style {
        padding: var(--spacing-sm) var(--spacing-lg);
        background: none;
        border: none;
        border-bottom: 3px solid transparent;
        cursor: pointer;
        font-weight: 500;
        color: var(--color-text-secondary);
        transition: all 0.2s ease;
        font-size: var(--font-size-md);
         margin-bottom: -1px; /* Nosta napit viivan päälle */
        font-family: inherit; /* Varmistetaan fontin perintä */
    }
    .tab-button-style.active {
        color: var(--color-primary);
        border-bottom-color: var(--color-primary);
    }
     .tab-button-style:hover:not(.active) {
         color: var(--color-primary);
          opacity: 1;
     }


    /* Osaamiskorttien gridi */
    .expertise-cards-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: var(--spacing-xl);
    }

    /* Kortin tyylit */
    .card {
        background-color: var(--color-bg-surface);
        border: 1px solid var(--color-border-subtle);
        border-radius: var(--border-radius-lg);
        padding: var(--spacing-xl);
        transition: box-shadow 0.3s ease, transform 0.3s ease;
         display: flex;
        flex-direction: column;
    }

     .card:hover {
        box-shadow: var(--shadow-lg);
         transform: translateY(-4px);
    }

     .card-icon {
        margin-bottom: var(--spacing-md);
        width: 48px; /* Increased size slightly */
        height: 48px;
        background-color: var(--color-primary-light);
        border-radius: var(--border-radius-md);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--primary-color);
    }

     .card h4 {
        font-size: var(--font-size-xl);
        font-weight: 600;
        margin-bottom: var(--spacing-sm);
        color: var(--color-text-primary);
    }

     .card p {
        color: var(--color-text-secondary);
        line-height: var(--line-height-normal);
        flex-grow: 1; /* Pusketaan linkki alas */
         margin-bottom: var(--spacing-lg);
    }

     .card ul {
        list-style: none;
        padding-left: 0;
        margin-bottom: var(--spacing-lg);
        color: var(--color-text-secondary);
    }

    .card li {
        position: relative;
        padding-left: 1.5em; /* Tilaa ikonille */
        margin-bottom: var(--spacing-sm);
    }

    .card li::before {
        content: '•'; /* Korvaa tällä tai SVG-ikoni */
        position: absolute;
        left: 0;
        color: var(--color-primary); /* Käytä teeman väriä */
        font-weight: bold;
    }

     .card-link {
        color: var(--primary-color);
        font-weight: 500;
        text-decoration: none;
        transition: color 0.2s ease;
         align-self: flex-start; /* Estää linkkiä venymästä */
    }

    .card-link:hover {
        text-decoration: underline;
    }

     /* ADDED Case Study Styles */
    .case-studies-section {
        max-width: var(--container-width);
        margin-left: auto;
        margin-right: auto;
    }

    .case-studies-section .container {
        display: flex;
        flex-direction: column;
        gap: 4rem; /* Space between case study items */
        padding-left: 0;
        padding-right: 0;
    }

    .case-study-item {
        background-color: rgba(255, 255, 255); /* Match expertise-section bg */
        padding: var(--spacing-xl); /* Internal padding */
        /* border-radius: var(--border-radius-lg); */ /* Use explicit value below */
        border-radius: 12px; /* Explicit rounding */
        box-shadow: 0 4px 15px rgba(0,0,0,0.05); /* Match expertise-section shadow */
        display: grid;
        grid-template-columns: repeat(12, 1fr); /* 12 column grid */
        gap: var(--spacing-xl);
        align-items: center; /* Vertically center content and image */
    }

    /* Alternate layout for even items if desired */
    /* .case-study-item:nth-child(even) .case-study-content {
        grid-column: 7 / span 6;
        order: 2;
    }
    .case-study-item:nth-child(even) .case-study-image-area {
         grid-column: 1 / span 5;
         order: 1;
    } */

     .case-study-content {
         grid-column: 1 / span 6; /* Content takes first 6 columns */
         display: flex;
         flex-direction: column;
         align-items: flex-start; /* Align content to the start */
    }

    .case-study-image-area {
         grid-column: 7 / span 6; /* Image takes last 6 columns */
         /* background-color: var(--color-bg-muted, #f1f5f9); */ /* REMOVED Placeholder bg */
         border-radius: var(--border-radius-lg); /* Rounded corners for image area */
         overflow: hidden; /* Ensure image stays within bounds */
         aspect-ratio: 16 / 10; /* Maintain aspect ratio */
         display: flex; /* Center image within area */
         align-items: center;
         justify-content: center;
    }

     .case-study-image {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Cover the area, might crop */
        display: block;
    }

     .tag.case-study-tag {
        /* background-color: var(--color-bg-accent-subtle, #f3f4f6); */ /* REMOVED gray background */
        background-color: transparent;
