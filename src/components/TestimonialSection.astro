---
interface Props {
  customerName: string;
  customerTitle: string;
  customerCompany: string;
  testimonialText: string;
  customerImage: string;
  imageAlt?: string;
  backgroundColor?: string;
  textColor?: string;
}

const { 
  customerName, 
  customerTitle, 
  customerCompany, 
  testimonialText, 
  customerImage,
  imageAlt = `${customerName} from ${customerCompany}`,
  backgroundColor = "transparent",
  textColor = "#333"
} = Astro.props;
---

<section class="testimonial-section" style={`background-color: ${backgroundColor}; color: ${textColor};`}>
  <div class="container">
    <div class="testimonial-content">
      <div class="testimonial-image-container">
        <img 
          src={customerImage} 
          alt={imageAlt} 
          class="testimonial-image"
        />
      </div>
      <div class="testimonial-text">
        <blockquote>
          <p class="testimonial-quote">{testimonialText}</p>
          <footer class="testimonial-attribution">
            <strong>{customerName}</strong>
            <span>{customerTitle}, {customerCompany}</span>
          </footer>
        </blockquote>
      </div>
    </div>
  </div>
</section>

<style>
  .testimonial-section {
    padding: 4rem 0;
    width: 100%;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .testimonial-content {
    display: flex;
    align-items: center;
    gap: 3rem;
    max-width: 80ch;
    margin: 0 auto;
  }

  .testimonial-image-container {
    flex: 0 0 auto;
    width: 200px;
  }

  .testimonial-image {
    width: 100%;
    height: auto;
    border-radius: 1rem;
    object-fit: cover;
    aspect-ratio: 1;
    box-shadow: var(--shadow-md, 0 4px 6px rgba(0, 0, 0, 0.1));
  }

  .testimonial-text {
    flex: 1;
  }

  .testimonial-quote {
    font-size: 1.25rem;
    line-height: 1.6;
    font-style: italic;
    margin-bottom: 1.5rem;
    position: relative;
  }

  .testimonial-quote::before {
    content: "\201C";
    font-size: 4rem;
    position: absolute;
    left: -1.5rem;
    top: -1.5rem;
    opacity: 0.2;
    color: var(--primary-color, #9C2043);
  }

  .testimonial-attribution {
    font-size: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .testimonial-attribution strong {
    color: var(--primary-color, #9C2043);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .testimonial-content {
      flex-direction: column;
      text-align: center;
      gap: 2rem;
    }

    .testimonial-image-container {
      width: 150px;
    }

    .testimonial-quote::before {
      left: 0;
      top: -2rem;
    }
  }
</style> 