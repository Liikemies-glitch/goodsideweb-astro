---
// src/components/Footer.astro
import { ui, defaultLang, languages } from '../i18n/ui';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<footer class="footer">
    <div class="container">
        <div class="footer__grid">
            <div class="footer__brand">
                <a href={`/${lang}/`} class="footer__logo">
                    <img src="/images/brand/logo.webp" alt={t('site.title')} width="140" height="32"/>
                </a>
                <p>{t('footer.description')}</p>
                <p>&copy; {new Date().getFullYear()} The Good Side Oy. {t('footer.rights')}</p>
            </div>
            <div class="footer__links">
                <h4>{t('footer.siteLinks')}</h4>
                <ul>
                    <li><a href={`/${lang}/`}>{t('footer.home')}</a></li>
                    <li><a href={`/${lang}/palvelut`}>{t('footer.services')}</a></li>
                    <li><a href={`/${lang}/referenssit`}>{t('footer.references')}</a></li>
                    <li><a href={`/${lang}/blog`}>{t('footer.blog')}</a></li>
                    <li><a href={`/${lang}/contact`}>{t('footer.contact')}</a></li>
                </ul>
            </div>
            <div class="footer__links">
                <h4>{t('footer.followUs')}</h4>
                <ul>
                    <li><a href="https://www.linkedin.com/company/the-good-side-oy/" target="_blank">LinkedIn</a></li>
                    <!-- Add other social links if needed -->
                </ul>
            </div>
            <div class="footer__contact">
                <h4>{t('footer.contactUs')}</h4>
                <p><strong>Mikki Aalto-Ylev√§</strong></p>
                <p><a href="tel:0408698887">040 869 8887</a></p>
                <p><a href="mailto:mikki@goodside.fi">mikki@goodside.fi</a></p>
            </div>
        </div>
    </div>
</footer> 